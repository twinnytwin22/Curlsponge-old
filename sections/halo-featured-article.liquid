{%- liquid
    assign show_section = false
    if section.blocks.size > 0 and section.settings.show_featured_article
        assign show_section = true
    endif
-%}
{%- if show_section -%}
    {%- liquid
        assign padding_top = section.settings.padding_top | append: 'px'
        assign padding_bottom = section.settings.padding_bottom | append: 'px'
        assign padding_top_tablet = section.settings.padding_top_tablet | append: 'px'
        assign padding_bottom_tablet = section.settings.padding_bottom_tablet | append: 'px'
        assign padding_top_mobile = section.settings.padding_top_mobile | append: 'px'
        assign padding_bottom_mobile = section.settings.padding_bottom_mobile | append: 'px'
        assign container = section.settings.container
        assign col = section.settings.col
        assign layout_style = section.settings.layout_style
        assign layout = section.settings.block_layout
        assign mobile_layout = section.settings.block_mobile_layout
        assign block_title = section.settings.block_title
        assign block_text = section.settings.block_text
        assign block_title_align = section.settings.block_title_align
        if layout == 'grid'
            assign column = section.settings.block_per_row | plus: 0
            if column > section.blocks.size
                assign column = section.blocks.size
            endif
        elsif layout == 'slider'
            assign column = section.settings.block_show
            assign dots = section.settings.block_dots
            assign arrows = section.settings.block_arrows
        endif
        assign media_size = section.settings.image_ratio
        assign portrait_aspect_ratio = section.settings.portrait_aspect_ratio | append: '%'
        assign show_subtitle = section.settings.show_subtitle
        assign show_summary = section.settings.show_summary
        assign show_author = section.settings.show_author
        assign show_date = section.settings.show_date
        assign show_read_more = section.settings.show_read_more
        assign show_featured_article_absolute = section.settings.show_featured_article_absolute
        assign show_featured_article_style = section.settings.show_featured_article_style
        assign align = section.settings.text_align
        if show_featured_article_style
            assign show_background_overlay = section.settings.show_background_overlay
            assign background_color = section.settings.background_color
            assign title_color = section.settings.title_color
            assign text_color = section.settings.text_color
            assign title_font = section.settings.title_font
            assign title_font_size = section.settings.title_font_size | append: 'px'
            assign title_mobile_font_size = section.settings.title_mobile_font_size | append: 'px'
            assign title_font_weight = section.settings.title_font_weight
            assign title_text_transform = section.settings.title_text_transform
            assign text_font_size = section.settings.text_font_size | append: 'px'
            assign text_font_weight = section.settings.text_font_weight
            assign text_text_transform = section.settings.text_text_transform
            if show_background_overlay
                assign background_overlay = section.settings.background_overlay
            endif
        endif
        assign image_border_radius = settings.image_border_radius
        assign image_effect = settings.image_effect
    -%}
    <style type="text/css" media="screen">
        #halo-featured-article-{{ section.id }}{
            padding-top: {{ padding_top }};
            padding-bottom: {{ padding_bottom }};
        }

        {% if show_featured_article_style %}
            :root {
                {% if title_font == 'font_1' %}
                    --title-font-{{ section.id }}: var(--font-1-family);
                {% elsif title_font == 'font_2' %}
                    --title-font-{{ section.id }}: var(--font-2-family);
                {% elsif title_font == 'font_3' %}
                    --title-font-{{ section.id }}: var(--font-3-family);
                {% endif %}
            }

            {% if background_color != 'rgba(0,0,0,0)' and background_color != blank and layout_style == '1' %}
                #halo-featured-article-{{ section.id }} .content-box{
                    background-color: {{ background_color }};
                    padding-left: 15px;
                    padding-right: 15px;
                    padding-bottom: 15px;
                }

                #halo-featured-article-{{ section.id }} .content-box--absolute{
                    padding-top: 15px;
                }
            {% endif %}

            {% if layout_style == '2' %}
                #halo-featured-article-{{ section.id }} .article-item{
                    background: {{ background_color }};  
                }
            {% endif %}

            {% if background_overlay != 'rgba(0,0,0,0)' and background_overlay != blank %}
                #halo-featured-article-{{ section.id }} .img-box .image:before{
                    content: '';
                    display: block;
                    position: absolute;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    background: 0 0;
                    z-index: 2;
                    background-color: {{ background_overlay | color_modify: 'alpha', 0.3 }};
                }
            {% endif %}

            #halo-featured-article-{{ section.id }} .banner-title{
                font-family: var(--title-font-{{ section.id }});
                font-size: {{ title_mobile_font_size }};
                font-weight: {{ title_font_weight }};
                text-transform: {{ title_text_transform }};
                color: {{ title_color }};
            }

            #halo-featured-article-{{ section.id }} .banner-summary,
            #halo-featured-article-{{ section.id }} .banner-info{
                font-size: {{ text_font_size }};
                font-weight: {{ text_font_weight }};
                text-transform: {{ text_text_transform }};
            }

            #halo-featured-article-{{ section.id }} .banner-subtitle,
            #halo-featured-article-{{ section.id }} .banner-info,
            #halo-featured-article-{{ section.id }} .banner-summary,
            #halo-featured-article-{{ section.id }} .banner-link{
                color: {{ text_color }};
            }

            {% if layout_style == '2' %}
                #halo-featured-article-{{ section.id }} .banner-subtitle,
                #halo-featured-article-{{ section.id }} .banner-link{
                    color: {{ title_color }};
                }

                #halo-featured-article-{{ section.id }}.style-2 .banner-link span:before{
                    background-color: {{ title_color }};
                }
            {% endif %}
        {% endif %}

        @media (max-width: 1024px) {
            #halo-featured-article-{{ section.id }}{
                padding-top: {{ padding_top_tablet }};
                padding-bottom: {{ padding_bottom_tablet }};
            }
        }

        @media (max-width: 550px) {
            #halo-featured-article-{{ section.id }}{
                padding-top: {{ padding_top_mobile }};
                padding-bottom: {{ padding_bottom_mobile }};
            }
        }

        @media (min-width: 551px){
            {% if show_featured_article_style %}
                #halo-featured-article-{{ section.id }} .banner-title{
                    font-size: {{ title_font_size }};
                }
            {% endif %}
        }
    </style>
    <div class="halo-block halo-banner halo-article style-{{ layout_style }}" id="halo-featured-article-{{ section.id }}" {% if layout == 'slider' or mobile_layout == 'slider' %}data-article-block data-loader-script="{{ 'halo.slide-article.js' | asset_url }}"{% endif %}>
        <div class="container container-{{ container }}{% if mobile_layout == 'swipe' %} container-no-padding{% endif %}">
            {%- if block_title != blank -%}
                <div class="halo-block-header">
                    <h3 class="title text-{{ block_title_align }}">
                        <span class="text">
                            {{ block_title | escape }}
                        </span>
                    </h3>
                    {%- if block_text != blank -%}
                        <span class="desc text-{{ block_title_align }}">
                            {{ block_text }}
                        </span>
                    {%- endif -%}
                </div>
            {%- endif -%}
            <div class="halo-block-content">
                <div class="halo-row halo-row--{{ col }} halo-row--{{ mobile_layout }} column-{{ column }} disable-scrollbar{% if layout == 'slider' %} halo-row-carousel{% if mobile_layout == 'slider' %} halo-row-carousel--mobile{% endif %}{% elsif mobile_layout == 'slider' %} halo-row-carousel--mobile{% endif %}"
                    {% if layout == 'slider' %}
                        data-item-to-show="{{ column }}"
                        data-item-dots="{{ dots }}"
                        data-item-arrows="{{ arrows }}"
                    {% endif %}
                >
                    {%- for block in section.blocks -%}
                        {%- liquid
                            assign handle = block.settings.article
                            assign article = articles[handle]
                            assign image_position = block.settings.image_position
                        -%}
                        <div class="halo-row-item item item-{{ block.id }}">
                            <div class="article-item banner-item image-{{ image_effect }} image-border-{{ image_border_radius }} banner-item--large image-postion--{{ image_position }}">
                                {%- if article != blank -%}
                                    {%- liquid
                                        assign image = article.image
                                        assign link = article.url
                                        assign title = article.title
                                        assign author = article.author
                                        if layout_style == 1
                                            assign summary = article.excerpt_or_content | strip_html | truncatewords: 20
                                        else
                                            assign summary = article.excerpt_or_content | strip_html | truncatewords: 30
                                        endif
                                    -%}
                                    <div class="img-box">
                                        {%- if article.image -%}
                                            <a class="image image-{{ media_size }}" href="{{ link }}"
                                                {% if media_size == 'adapt' %}
                                                    style="padding-bottom: {{ 1 | divided_by: image.aspect_ratio | times: 100 }}%;"
                                                {% elsif media_size == 'square' %}
                                                    style="padding-bottom: 100%;"
                                                {% elsif media_size == 'portrait' %}
                                                    {% if portrait_aspect_ratio != blank %}
                                                        style="padding-bottom: {{ portrait_aspect_ratio }};"
                                                    {% endif %}
                                                {% endif %}
                                            >
                                                <img srcset="
                                                    {%- if image.width >= 165 -%}
                                                        {{ image | img_url: '165x' }} 165w,
                                                    {%- endif -%}
                                                    {%- if image.width >= 360 -%}
                                                        {{ image | img_url: '360x' }} 360w,
                                                    {%- endif -%}
                                                    {%- if image.width >= 533 -%}
                                                        {{ image | img_url: '533x' }} 533w,
                                                    {%- endif -%}
                                                    {%- if image.width >= 720 -%}
                                                        {{ image | img_url: '720x' }} 720w,
                                                    {%- endif -%}
                                                    {%- if image.width >= 940 -%}
                                                        {{ image | img_url: '940x' }} 940w,
                                                    {%- endif -%}
                                                    {%- if image.width >= 1066 -%}
                                                        {{ image | img_url: '1066x' }} 1066w
                                                    {%- endif -%}"
                                                    src="{{ image | img_url: '533x' }}"
                                                    alt="{{ image.alt | default: shop.name | escape }}"
                                                    sizes="(min-width: 1100px) 535px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
                                                    loading="lazy"
                                                >
                                            </a>
                                        {%- else -%}
                                            <a class="image" href="{{ link }}">
                                                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                                            </a>
                                        {%- endif -%}
                                    </div>
                                    <div class="content-box{% if show_featured_article_absolute and layout_style == '1' %} content-box--absolute{% endif %} text-{{ align }}">
                                        {%- if show_subtitle -%}
                                            {%- if article.tags != blank -%}
                                                <span class="banner-subtitle">
                                                    {% assign first_tag = article.tags | first | escape %}
                                                    {{ first_tag | escape }}
                                                </span>
                                            {%- endif -%}
                                        {%- endif -%}
                                        {%- if title != blank -%}
                                            <h4 class="banner-title">
                                                <a href="{{ link }}">  
                                                    {{ title | escape }}
                                                </a>
                                            </h4>
                                        {%- endif -%}
                                        {%- if show_author or show_date -%}
                                            <span class="banner-info">
                                                {% if show_author %}{{ 'blogs.article.author' | t : author : author }}{% endif %}{% if show_author and show_date %} - {% endif %}{% if show_date %}{{ article.published_at | time_tag: '%b %d, %Y' }}{% endif%}
                                            </span>
                                        {%- endif -%}
                                        {%- if show_summary -%}
                                            <div class="banner-summary">
                                                {{ summary | escape }}
                                            </div>
                                        {%- endif -%}
                                        {%- if show_read_more -%}
                                            <a href="{{ link }}" class="banner-link link link-underline">
                                                <span class="text">{{ 'blogs.article.read_more' | t }}</span>
                                            </a>
                                        {%- endif -%}
                                    </div>
                                {%- else -%}
                                    <div class="img-box">
                                        <div class="image">
                                            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                                        </div>
                                    </div>
                                    <div class="content-box{% if show_featured_article_absolute %} content-box--absolute{% endif %} text-{{ align }}">
                                        <h4 class="banner-title">
                                            <a href="#">  
                                                Article Title
                                            </a>
                                        </h4>
                                        {%- if show_author or show_date -%}
                                            <span class="banner-info">
                                                {% if show_author %}Article's Author{% endif %}{% if show_author and show_date %} - {% endif %}{% if show_date %}The timestamp of when the article was published{% endif %}
                                            </span>
                                        {%- endif -%}
                                        {%- if show_summary -%}
                                            <div class="banner-summary">
                                                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi tincidunt nunc at eros tempus, ac scelerisque dolor luctus.
                                            </div>
                                        {%- endif -%}
                                    </div>
                                {%- endif -%}
                            </div>
                        </div>
                    {%- endfor -%}
                </div>
            </div>
        </div>
    </div>
{%- endif -%}
