{%- liquid
    assign show_section = false
    if section.blocks.size > 0 and section.settings.show_custom_banner
        assign show_section = true
    endif
-%}
{%- if show_section -%}
    {%- liquid
        assign padding_top = section.settings.padding_top | append: 'px'
        assign padding_bottom = section.settings.padding_bottom | append: 'px'
        assign padding_top_tablet = section.settings.padding_top_tablet | append: 'px'
        assign padding_bottom_tablet = section.settings.padding_bottom_tablet | append: 'px'
        assign padding_top_mobile = section.settings.padding_top_mobile | append: 'px'
        assign padding_bottom_mobile = section.settings.padding_bottom_mobile | append: 'px'
        assign background_color_section = section.settings.background_color_section
        assign column = section.settings.column
        assign container = section.settings.container
        assign col = section.settings.col
        assign block_title = section.settings.block_title
        assign block_text = section.settings.block_text
        assign block_title_align = section.settings.block_title_align
        assign show_custom_banner_style = section.settings.show_custom_banner_style
        assign style = section.settings.style
        assign mobile_layout = section.settings.block_mobile_layout
        if show_custom_banner_style
            assign background_color = section.settings.background_color
            assign title_color = section.settings.title_color
            assign title_font = section.settings.title_font
            assign title_font_size = section.settings.title_font_size | plus: 0
            assign title_mobile_font_size = section.settings.title_mobile_font_size | append: 'px'
            assign title_font_weight = section.settings.title_font_weight
            assign title_text_transform = section.settings.title_text_transform
            assign text_color = section.settings.text_color
            assign transparent_button = section.settings.transparent_button
            assign text_font_size = section.settings.text_font_size | append: 'px'
            assign text_font_weight = section.settings.text_font_weight
            assign text_text_transform = section.settings.text_text_transform
        endif
        assign image_border_radius = settings.image_border_radius
        assign image_effect = settings.image_effect
    -%}
    <style type="text/css" media="screen">
        {% if show_custom_banner_style %}
            :root {
                {% if title_font == 'font_1' %}
                    --title-font-{{ section.id }}: var(--font-1-family);
                {% elsif title_font == 'font_2' %}
                    --title-font-{{ section.id }}: var(--font-2-family);
                {% elsif title_font == 'font_3' %}
                    --title-font-{{ section.id }}: var(--font-3-family);
                {% endif %}
            }
        {% endif %}

        #halo-custom-banner-{{ section.id }}{
            padding-top: {{ padding_top }};
            padding-bottom: {{ padding_bottom }};
            {% if background_color_section != 'rgba(0,0,0,0)' and background_color_section != blank %}
                background:{{ background_color_section }};
            {% endif %}
        }

        {% if show_custom_banner_style %}
            {% if background_color != 'rgba(0,0,0,0)' and background_color != blank %}
                #halo-custom-banner-{{ section.id }} .content-box{
                    background: {{ background_color }};
                    padding-left: 15px;
                    padding-right: 15px;
                    padding-bottom: 15px;
                }
            {% endif %}

            #halo-custom-banner-{{ section.id }} .banner-title{
                font-family: var(--title-font-{{ section.id }});
                font-size: {{ title_mobile_font_size }};
                font-weight: {{ title_font_weight }};
                text-transform: {{ title_text_transform }};
                color: {{ title_color }};
            }

            #halo-custom-banner-{{ section.id }} .banner-text,
            #halo-custom-banner-{{ section.id }} .button-link{
                color: {{ text_color }};
                font-size: {{ text_font_size }};
                font-weight: {{ text_font_weight }};
                text-transform: {{ text_text_transform }};
            }

            #halo-custom-banner-{{ section.id }}.style-3 .button-link,
            #halo-custom-banner-{{ section.id }}.style-4 .button-link{
                color: var(--color-link);
            }

            {% if transparent_button %}
                #halo-custom-banner-{{ section.id }} .banner-button{
                    color: {{ text_color }};
                    border-color: {{ text_color }};
                    background-color: transparent;
                }

                #halo-custom-banner-{{ section.id }} .banner-button:before{
                    background-color: {{ text_color }};
                }
            {% endif %}
        {% endif %}

        @media (max-width: 1024px) {
            #halo-custom-banner-{{ section.id }}{
                padding-top: {{ padding_top_tablet }};
                padding-bottom: {{ padding_bottom_tablet }};
            }
        }

        @media (max-width: 550px) {
            #halo-custom-banner-{{ section.id }}{
                padding-top: {{ padding_top_mobile }};
                padding-bottom: {{ padding_bottom_mobile }};
            }
        }

        {% if show_custom_banner_style %}
            {% if title_font_size >= 60 %}
                @media (min-width: 768px){
                    #halo-custom-banner-{{ section.id }} .banner-title{
                        font-size: {{ title_font_size | minus: 30 | append: 'px' }};
                    }
                }

                @media (min-width: 1025px){
                    #halo-custom-banner-{{ section.id }} .banner-title{
                        font-size: {{ title_font_size | minus: 20 | append: 'px' }};
                    }
                }

                @media (min-width: 1600px){
                    #halo-custom-banner-{{ section.id }} .banner-title{
                        font-size: {{ title_font_size | append: 'px' }};
                    }
                }
            {% else %}
                @media (min-width: 551px){
                    #halo-custom-banner-{{ section.id }} .banner-title{
                        font-size: {{ title_font_size | append: 'px' }};
                    }
                }
            {% endif %}
        {% endif %}
    </style>
    <div class="halo-block halo-banner custom-banner style-{{ style }}" id="halo-custom-banner-{{ section.id }}">
        <div class="container container-{{ container }}{% if mobile_layout == 'swipe' %} container-no-padding{% endif %}">
            {%- if block_title != blank -%}
                <div class="halo-block-header">
                    <h3 class="title text-{{ block_title_align }}">
                        <span class="text">
                            {{ block_title | escape }}
                        </span>
                    </h3>
                    {%- if block_text != blank -%}
                        <span class="desc text-{{ block_title_align }}">
                            {{ block_text }}
                        </span>
                    {%- endif -%}
                </div>
            {%- endif -%}
            <div class="halo-block-content">
                <div class="halo-row halo-row--{{ col }} column-{{ column }} halo-row--{{ mobile_layout }} disable-scrollbar">
                    {%- for block in section.blocks -%}
                        {%- liquid
                            assign image = block.settings.image
                            assign title = block.settings.title
                            assign text = block.settings.text
                            assign btn = block.settings.btn
                            assign btn_text = block.settings.btn_text
                            assign link = block.settings.link
                            assign align = block.settings.align
                            assign position = block.settings.position
                        -%}
                        <div class="halo-row-item item item-{{ block.id }}">
                            <div class="custom-banner-item banner-item banner-item--large image-{{ image_effect }} image-border-{{ image_border_radius }}">
                                <div class="img-box">
                                    {%- if image != blank -%}
                                        <{% if link != blank %}a{% else %}div{% endif %} class="image image-adapt" {% if link != blank %} href="{{ link }}"{% endif %} style="padding-top: {{ 1 | divided_by: image.aspect_ratio | times: 100 | append: '%' }}">
                                            <img srcset="{{ image | img_url: 'master' }} 1x, {{ image | img_url: 'master', scale: 2 }} 2x" src="{{ image | img_url: 'master' }}" alt="{{ image.alt | default: shop.name | escape }}" loading="lazy">
                                        </{% if link != blank %}a{% else %}div{% endif %}>
                                    {%- else -%}
                                        <{% if link != blank %}a{% else %}div{% endif %} class="image" {% if link != blank %} href="{{ link }}"{% endif %}>
                                            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                                        </{% if link != blank %}a{% else %}div{% endif %}>
                                    {%- endif -%}
                                </div>
                                {%- if title != blank or text != blank or btn_text != blank -%}
                                    <div class="content-box{% if style == '1' %} content-box--absolute content-box--{{ position }}{% elsif style == '3' or style == '4' %} content-box--custom{% endif %} text-{{ align }}">
                                        {%- if title != blank -%}
                                            <h4 class="banner-title">
                                                {%- if link != blank -%}<a href="{{ link }}">{%- endif -%}{{ title | escape }}{%- if link != blank -%}</a>{%- endif -%}
                                            </h4>
                                        {%- endif -%}
                                        {%- if text != blank -%}
                                            <span class="banner-text">
                                                {{ text }}
                                            </span>
                                        {%- endif -%}
                                        {%- if btn_text != blank -%}
                                            <{% if link != blank %}a{% else %}div{% endif %} {% if link != blank %}href="{{ link }}"{% endif %} class="banner-button{% if btn != 'link' %} button button-{{ btn }}{% if transparent_button %} button--transparent{% endif %}{% else %} button-link link text-underline link-underline{% endif %}">
                                                {%- if btn == 'link' -%}<span class="text">{%- endif -%}
                                                    {{ btn_text | escape }}
                                                {%- if btn == 'link' -%}</span>{%- endif -%}
                                            </{% if link != blank %}a{% else %}div{% endif %}>
                                        {%- endif -%}
                                    </div>
                                {%- endif -%}
                            </div>
                        </div>
                    {%- endfor -%}
                </div>
            </div>
        </div>
    </div>
{%- endif -%}
