{%- liquid
    assign show_section = false
    if section.blocks.size > 0 and section.settings.show_lookbook_masonry
        assign show_section = true
    endif
-%}
{%- if show_section -%}
	{%- liquid
        assign padding_top = section.settings.padding_top | append: 'px'
        assign padding_bottom = section.settings.padding_bottom | append: 'px'
        assign padding_top_tablet = section.settings.padding_top_tablet | append: 'px'
        assign padding_bottom_tablet = section.settings.padding_bottom_tablet | append: 'px'
        assign padding_top_mobile = section.settings.padding_top_mobile | append: 'px'
        assign padding_bottom_mobile = section.settings.padding_bottom_mobile | append: 'px'
        assign container = section.settings.container
        assign block_title = section.settings.block_title
        assign block_text = section.settings.block_text
        assign block_title_align = section.settings.block_title_align
        assign column = section.settings.item_per_row
        assign col = section.settings.col
        assign lookbook_type = section.settings.lookbook_type
        assign lookbook_style = section.settings.lookbook_style
        assign image_border_radius = settings.image_border_radius
        assign image_effect = settings.image_effect
    -%}
    <style type="text/css" media="screen">
        #halo-lookbook-masonry-{{ section.id }}{
            padding-top: {{ padding_top }};
            padding-bottom: {{ padding_bottom }};
        }

        @media (max-width: 1024px) {
            #halo-lookbook-masonry-{{ section.id }}{
                padding-top: {{ padding_top_tablet }};
                padding-bottom: {{ padding_bottom_tablet }};
            }
        }

        @media (max-width: 550px) {
            #halo-lookbook-masonry-{{ section.id }}{
                padding-top: {{ padding_top_mobile }};
                padding-bottom: {{ padding_bottom_mobile }};
            }
        }
    </style>
	<div class="halo-block halo-banner lookbook-masonry" id="halo-lookbook-masonry-{{ section.id }}">
		<div class="container container-{{ container }}">
			{%- if block_title != blank -%}
                <div class="halo-block-header">
                    <h3 class="title text-{{ block_title_align }}">
                        <span class="text">
                        	{{ block_title | escape }}
                        </span>
                    </h3>
                    {%- if block_text != blank -%}
	                    <span class="desc text-{{ block_title_align }}">
	                    	{{ block_text }}
	                    </span>
	                {%- endif -%}
                </div>
            {%- endif -%}
			<div class="halo-block-content{% if lookbook_type == 'popup_card' %} halo-lookbook-box{% endif %}">
				<div class="masonry-row masonry--{{ col }} column-{{ column }} shuffle-container">
            		{%- for block in section.blocks -%}
            			{%- liquid
	                        assign image = block.settings.image
            				assign link = block.settings.link
                            assign lookbook = block.settings.lookbook
	                    -%}
	                    <div class="masonry-item">
	                    	<div class="banner-item item">
	                    		<div class="img-box">
	                    			{%- if image != blank -%}
                                        {%- if link != blank -%}
                                            <a class="image image-{{ image_effect }} image-border-{{ image_border_radius }} image-adapt" href="{{ link }}" style="padding-top: {{ 1 | divided_by: image.aspect_ratio | times: 100 | append: '%' }}">
                                        {%- else -%}
                                            <div class="image image-{{ image_effect }} image-border-{{ image_border_radius }} image-adapt" style="padding-top: {{ 1 | divided_by: image.aspect_ratio | times: 100 | append: '%' }}">
                                        {%- endif -%}
							            	<img srcset="{{ image | img_url: 'master' }} 1x, {{ image | img_url: 'master', scale: 2 }} 2x" src="{{ image | img_url: 'master' }}" alt="{{ image.alt | default: shop.name | escape }}" loading="lazy">
							            {%- if link != blank -%}
                                            </a>
                                        {%- else -%}
                                            </div>
                                        {%- endif -%}
						            {%- else -%}
                                        {%- if link != blank -%}
                                            <a class="image" href="{{ link }}">
                                        {%- else -%}
                                            <div class="image">
                                        {%- endif -%}
                                            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                                        {%- if link != blank -%}
                                            </a>
                                        {%- else -%}
                                            </div>
                                        {%- endif -%}
						            {%- endif -%}
	                    		</div>
                                {%- for i in (1..5) -%}
                                    {% capture cap_product %}product_{{ i }}{% endcapture %}
                                    {% capture cap_point_y %}point_y_{{ i }}{% endcapture %}
                                    {% capture cap_point_x %}point_x_{{ i }}{% endcapture %}
                                    {%- liquid
                                        assign handle = block.settings[cap_product]
                                        assign product = all_products[handle]
                                        assign point_y = block.settings[cap_point_y]
                                        assign point_x = block.settings[cap_point_x]
                                    -%}
                                    {%- if product != blank -%}
                                        <div class="point-box style-{{ lookbook_style }}" style="top: {{ point_y }}%; left: {{ point_x }}%;">
                                            <div class="point-icon" {% if lookbook_type == 'popup_quickview' %} data-open-quick-view-popup{% else %} data-open-lookbook-popup{% endif %} data-product-handle="{{ product.handle }}" role="button" tabindex="0">
                                                <span class="text{% if lookbook_style == '3' %} visually-hidden{% endif %}">
                                                    {{ forloop.index }}
                                                </span>
                                            </div>
                                        </div>
                                    {%- endif -%}
                                {%- endfor -%}
	                    	</div>
	                    </div>
            		{%- endfor -%}
                    <div class="masonry-item sizer-element"></div>
            	</div>
                {%- if lookbook_type == 'popup_card' -%}
                    <div class="halo-lookbook-popup">
                        <a href="#" class="close" data-close-lookbook-popup role="button">
                            <span class="visually-hidden">{{ 'general.common.close' | t }}</span>
                            {% render 'icon-close' %}
                        </a>
                        <div class="content"></div>
                    </div>
                {%- endif -%}
			</div>
		</div>
	</div>
{%- endif -%}

{{ 'halo-masonry.js' | asset_url | script_tag }}

<script type="text/javascript">
    function initShuffle() {
        var Shuffle = window.Shuffle;
        var block = document.getElementById('halo-lookbook-masonry-{{ section.id }}');
        var element = block.querySelector('.shuffle-container');
        var sizer = block.querySelector('.sizer-element');

        var shuffleInstance = new Shuffle(element, {
            itemSelector: '.masonry-item',
            sizer: sizer
        });
    }

    initShuffle();
</script>

