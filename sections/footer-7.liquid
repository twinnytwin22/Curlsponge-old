{{ 'section-footer.css' | asset_url | stylesheet_tag }}

{% render 'footer-style' %}

{%- liquid
    assign show_footer_top = section.settings.show_footer_top
    if show_footer_top
        assign show_newsletter = section.settings.show_newsletter
        assign footer_top_container = section.settings.footer_top_container
        assign logo_footer_top = section.settings.logo_footer_top
        if show_newsletter
            assign newsletter_heading = section.settings.newsletter_heading
            assign newsletter_text = section.settings.newsletter_text
        endif
    endif
    assign show_footer_middle = section.settings.show_footer_middle
    if show_footer_middle and section.blocks.size > 0
        assign footer_middle_container = section.settings.footer_middle_container
        assign show_footer_middle_bg_img = section.settings.show_footer_middle_bg_img
        assign footer_link = section.blocks | where: "type", "link_list"
        assign footer_text = section.blocks | where: "type", "text"
        assign footer_text_custom = section.blocks | where: "type", "text_custom"
        assign bottom_image_item = section.blocks | where: "type", "image"
        assign text_align = section.settings.footer_middle_text_align
        assign footer_midle_class = "footer-block__middle"
    endif
    assign show_footer_bottom = section.settings.show_footer_bottom
    if show_footer_bottom
        assign footer_bottom_container = section.settings.footer_bottom_container
        assign show_payment = section.settings.show_payment
        assign footer_bottom_heading = section.settings.footer_bottom_heading
        assign btn_text_bottom = section.settings.btn_text_bottom
        assign btn_link_bottom = section.settings.btn_link_bottom
        assign btn_option = section.settings.btn_option
        if show_payment
            assign payment_type = section.settings.payment_type
        endif
        assign show_copyright = section.settings.show_copyright
        if show_copyright
            assign copyright = section.settings.copyright
        endif 
        assign show_social = section.settings.show_social
    endif
-%}
<footer class="footer footer-7">
    {%- if show_footer_top -%}
        {%- if show_newsletter -%}
            <div class="footer__content-top">
                <div class="container container-{{ footer_top_container }}">
                    <div class="footer-block__top clearfix">
                        <div class="footer-block__item footer-block__newsletter">
                            <div class="item clearfix">
                                {%- if newsletter_heading != blank or logo_footer_top != blank -%}
                                    <div class="footer-block__newsletter-item footer-block__newsletter-content">
                                        {%- if logo_footer_top != blank -%}
                                            <a href="{{ routes.root_url }}" class="footer__heading-link focus-inset">
                                                <img
                                                    srcset="{{ logo_footer_top | img_url: 'master' }} 1x, {{ logo_footer_top | img_url: 'master', scale: 2 }} 2x"
                                                    src="{{ logo_footer_top | img_url: 'master' }}"
                                                    loading="lazy"
                                                    class="footer__top__heading-logo"
                                                    alt="{{ logo_footer_top.alt | default: shop.name | escape }}"
                                                    width="{{ logo_footer_top.width | replace: 'px', '' }}"
                                                    height="{{ logo_footer_top.height | replace: 'px', '' }}"
                                                >
                                            </a>
                                        {%- endif -%}
                                        {%- if newsletter_heading != blank -%}
                                            <h2 class="footer-block__heading text-left">
                                                {{ newsletter_heading | escape }}
                                            </h2>
                                        {%- endif -%}
                                    </div>
                                {%- endif -%}
                                <div class="footer-block__newsletter-item footer-block__newsletter-form">
                                    {% render 'newsletter-form',
                                        show_newsletter_text: true,
                                        newsletter_text: newsletter_text
                                    %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {%- endif -%}
    {%- endif -%}
    {%- if show_footer_middle and section.blocks.size > 0 -%}
        <div class="footer__content-middle{% if show_footer_middle_bg_img %} footer__content-bg{% endif %}">
            <div class="container container-{{ footer_middle_container }}">
                <div class="{{ footer_midle_class }}">
                    {%- if footer_text.size -%}
                        {% render 'footer-texts',
                            footer_text: footer_text,
                            text_align: text_align
                        %}
                    {%- endif -%}

                    {%- if footer_link.size > 0 -%}
                        {% render 'footer-links',
                            footer_link: footer_link,
                            text_align: text_align
                        %}
                    {%- endif -%}

                    {%- if footer_text_custom.size > 0-%}
                        {% render 'footer-texts-1',
                            footer_text_custom: footer_text_custom,
                            text_align: text_align
                        %}
                    {%- endif -%}
                </div>
            </div>
        </div>
    {%- endif -%}
    {%- if show_footer_bottom -%}
        <div class="footer__content-bottom ">
            <div class="container container-{{ footer_bottom_container }}">
                {%- if bottom_image_item.size > 0 -%}
                    {%- liquid
                        assign column = section.settings.block_show
                        assign dots = section.settings.block_dots
                        assign arrows = section.settings.block_arrows
                        assign image_border_radius = settings.image_border_radius
                        assign image_effect = settings.image_effect
                    -%}
                    <div class="wrapper-footer-block">
                        <div class="footer-block__left text-left">
                            <h4 class="title">
                                {{ footer_bottom_heading }}
                            </h4>
                            {%- if btn_text_bottom != blank -%}
                                <{% if btn_link_bottom != blank %}a{% else %}div{% endif %} {% if btn_link_bottom != blank %}href="{{ btn_link_bottom }}"{% endif %} class="footer-button button button-{{ btn_option }}">
                                    <span class="text">
                                        {{ btn_text_bottom | escape }}
                                    </span>
                                </{% if btn_link_bottom != blank %}a{% else %}div{% endif %}>
                            {%- endif -%}
                        </div>
                        <div class="halo-block halo-banner footer-block__right text-right" data-footer-banner-block data-loader-script="{{ 'halo.slide-footer-banner.js' | asset_url }}">
                            <div class="halo-row column-{{ bottom_image_item.size }} disable-scrollbar halo-row-carousel"data-item-to-show="{{ column }}" data-item-dots="{{ dots }}" data-item-arrows="{{ arrows }}">
                                {%- for block in bottom_image_item -%}
                                    {%- liquid
                                        assign image = block.settings.image_bottom_item
                                        assign link = block.settings.link_image
                                    -%}
                                    <div class="halo-row-item item item-{{ block.id }}">
                                        <div class="banner-item image-{{ image_effect }}">
                                            <div class="img-box">
                                                {%- if image != blank -%}
                                                    <{% if link != blank %}a{% else %}div{% endif %} class="image image-adapt image-border-{{ image_border_radius }}" {% if link != blank %} href="{{ link }}"{% endif %} style="padding-top: {{ 1 | divided_by: image.aspect_ratio | times: 100 | append: '%' }}">
                                                        <img srcset="{{ image | img_url: '1920x' }} 1x, {{ image | img_url: '1920x', scale: 2 }} 2x" src="{{ image | img_url: '1920x', crop: 'center' }}" alt="{{ image.alt | default: shop.name | escape }}" loading="lazy">
                                                    </{% if link != blank %}a{% else %}div{% endif %}>
                                                {%- else -%}
                                                    <div class="image">
                                                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}   
                                                    </div>
                                                {%- endif -%}
                                            </div>
                                        </div>
                                    </div>
                                {%- endfor -%}
                            </div>
                        </div>
                    </div>
                {%- endif -%}
                <div class="footer-block__bottom text-center">
                    {%- if show_copyright -%}
                        <div class="wrapper-footer-bottom-block">
                            <div class="footer__column-item footer__copyright">
                                {% render 'footer-copyright',
                                    copyright: copyright
                                %}
                            </div>
                        </div>
                    {%- endif -%}
                    {%- if show_social -%}
                        <div class="footer_social-media">
                            {% render 'halo-social-media-icons' %}
                        </div>
                    {%- endif -%}
                    {%- if show_payment -%}
                        <div class="footer__column-item footer__payment">
                            {% render 'footer-payment',
                                section: section,
                                payment_type: payment_type
                            %}
                        </div>
                    {%- endif -%}
                </div>
            </div>
        </div>
    {%- endif -%}
</footer>

