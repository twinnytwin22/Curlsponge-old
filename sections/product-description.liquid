{%- if section.settings.show_product_description -%}
	{{ 'component-product-description.css' | asset_url | stylesheet_tag }}
	{%- liquid
        assign padding_top = section.settings.padding_top | append: 'px'
        assign padding_bottom = section.settings.padding_bottom | append: 'px'
        assign padding_top_tablet = section.settings.padding_top_tablet | append: 'px'
        assign padding_bottom_tablet = section.settings.padding_bottom_tablet | append: 'px'
        assign padding_top_mobile = section.settings.padding_top_mobile | append: 'px'
        assign padding_bottom_mobile = section.settings.padding_bottom_mobile | append: 'px'
        assign container = section.settings.container
        assign block_title = section.settings.block_title
        assign block_text = section.settings.block_text
        assign block_title_align = section.settings.block_title_align
        assign title_font = section.settings.title_font
        assign title_font_size = section.settings.title_font_size
        assign title_mobile_font_size = section.settings.title_mobile_font_size | append: 'px'
        assign title_font_weight = section.settings.title_font_weight
        assign title_text_transform = section.settings.title_text_transform
        assign title_color = section.settings.title_color
        assign text_color = section.settings.text_color
        assign style_section = section.settings.style_section
    -%}
    <style type="text/css" media="screen">
        :root {
            {% if title_font == 'font_1' %}
                --title-font-{{ section.id }}: var(--font-1-family);
            {% elsif title_font == 'font_2' %}
                --title-font-{{ section.id }}: var(--font-2-family);
            {% elsif title_font == 'font_3' %}
                --title-font-{{ section.id }}: var(--font-3-family);
            {% endif %}
        }

        #halo-product-description-{{ section.id }}{
            padding-top: {{ padding_top }};
            padding-bottom: {{ padding_bottom }};
        }

        #halo-product-description-{{ section.id }} .content-box .heading{
            font-family: var(--title-font-{{ section.id }});
            font-size: {{ title_mobile_font_size }};
            font-weight: {{ title_font_weight }};
            text-transform: {{ title_text_transform }};
            color: {{ title_color }};
        }

        #halo-product-description-{{ section.id }} .content-box .content{
            color: {{ text_color }};
        }

        @media (max-width: 1024px) {
            #halo-product-description-{{ section.id }}{
                padding-top: {{ padding_top_tablet }};
                padding-bottom: {{ padding_bottom_tablet }};
            }
        }

        @media (max-width: 550px) {
            #halo-product-description-{{ section.id }}{
                padding-top: {{ padding_top_mobile }};
                padding-bottom: {{ padding_bottom_mobile }};
            }
        }

        {% if title_font_size >= 60 %}
            @media (min-width: 768px){
                #halo-product-description-{{ section.id }} .content-box .heading{
                    font-size: {{ title_font_size | minus: 30 | append: 'px' }};
                }
            }

            @media (min-width: 1025px){
                #halo-product-description-{{ section.id }} .content-box .heading{
                    font-size: {{ title_font_size | minus: 20 | append: 'px' }};
                }
            }

            @media (min-width: 1600px) {
                #halo-product-description-{{ section.id }} .content-box .heading{
                    font-size: {{ title_font_size | append: 'px' }};
                }
            }
        {% else %}
            @media (min-width: 551px){
                #halo-product-description-{{ section.id }} .content-box .heading{
                    font-size: {{ title_font_size | append: 'px' }};
                }
            }
        {% endif %}
    </style>
    <div class="halo-block halo-product-description style-{{ style_section }}" id="halo-product-description-{{ section.id }}">
    	<div class="container container-{{ container }}">
    		{%- if block_title != blank -%}
                <div class="halo-block-header">
                    <h3 class="title text-{{ block_title_align }}">
                        <span class="text">
                            {{ block_title | escape }}
                        </span>
                    </h3>
                    {%- if block_text != blank -%}
                        <span class="desc text-{{ block_title_align }}">
                            {{ block_text }}
                        </span>
                    {%- endif -%}
                </div>
            {%- endif -%}
            <div class="halo-block-content">
            	<div class="description-block">
	            	{%- for block in section.blocks -%}
	            		{%- if block.type == 'image' -%}
	            			<div class="halo-items description-block-item">
	            				{%- liquid
		                            assign class = block.settings.style
		                            assign image = block.settings.image
		                            assign link = block.settings.link
		                            assign title = block.settings.title
		                            assign content = block.settings.content
		                            assign has_content = false
		                            if title != blank or content != blank
		                                assign has_content = true
		                                assign alignment = block.settings.alignment
		                            endif
                                    assign image_border_radius = settings.image_border_radius
                                    assign image_effect = settings.image_effect
		                        -%}
		                        <div class="halo-item halo-item--{{ class }}">
		                            <div class="item item-image{% if has_content %} item-first{% endif %}">
		                                <div class="img-box">
		                                    {%- if image != blank -%}
		                                        {%- if link != blank -%}
		                                            <a class="image image-{{ image_effect }} image-border-{{ image_border_radius }}" href="{{ link }}" style="padding-top: {{ 1 | divided_by: image.aspect_ratio | times: 100 | append: '%' }}">
		                                        {%- else -%}
		                                            <div class="image image-{{ image_effect }} image-border-{{ image_border_radius }}" style="padding-top: {{ 1 | divided_by: image.aspect_ratio | times: 100 | append: '%' }}">
		                                        {%- endif -%}
		                                            <img srcset="{{ image | img_url: 'master' }} 1x, {{ image | img_url: 'master', scale: 2 }} 2x"
		                                                src="{{ image | img_url: 'master' }}"
		                                                loading="lazy"
		                                                alt="{{ image.alt | default: shop.name | escape }}">
		                                        {%- if link != blank -%}
		                                            </a>
		                                        {%- else -%}
		                                            </div>
		                                        {%- endif -%}
		                                    {%- else -%}
		                                        <div class="image">
		                                            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
		                                        </div>
		                                    {%- endif -%}
		                                </div>
		                            </div>
		                            {%- if has_content -%}
		                                <div class="item item-content item-second">
		                                    <div class="content-box text-{{ alignment }}">
		                                        {%- if title != blank -%}
		                                            <h4 class="heading">{{ title | escape }}</h4>
		                                        {%- endif -%}
		                                        {%- if content != blank -%}
		                                            <div class="content">{{ content }}</div>
		                                        {%- endif -%}
		                                    </div>
		                                </div>
		                            {%- endif -%}
		                        </div>
	            			</div>
	            		{%- elsif block.type == 'description' -%}
	            			{%- liquid
	                           assign alignment = block.settings.alignment
		                    -%}
	            			<div class="halo-text-format description-block-item text-{{ alignment }}">
	            				{{ product.description }}
	            			</div>
	            		{%- endif -%}
	            	{%- endfor -%}
            	</div>
            </div>
    	</div>
    </div>
{%- endif -%}
