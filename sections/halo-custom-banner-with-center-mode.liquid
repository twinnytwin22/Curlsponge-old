                                        <img srcset="{{ image_3 | img_url: 'master' }} 1x, {{ image_3 | img_url: 'master', scale: 2 }} 2x" src="{{ image_3 | img_url: 'master' }}" alt="{{ image_3.alt | default: shop.name | escape }}" loading="lazy">
                                    }
                                    </{% if link_3 !=blank %}a{% else %}div{% endif %}>
                                {%- else -%}
                                    <div class="image">
                                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                                    </div>
                                {%- endif -%}
                                {%- if title_3 != blank -%}
                                    <h4 class="banner-title">
                                        {%- if link_3 != blank -%}
                                            <a href="{{ link_3 }}">
                                        {%- endif -%}
                                            {{ title_3 | escape }}
                                        {%- if link_3 != blank -%}
                                            </a>
                                        {%- endif -%}
                                    </h4>
                                {%- endif -%}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{%- endif -%}
