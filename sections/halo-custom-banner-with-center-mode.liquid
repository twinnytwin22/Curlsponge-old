{%- liquid
    assign show_custom_banner = section.settings.show_custom_banner
-%}
{%- if show_custom_banner -%}
    {%- liquid
        assign padding_top = section.settings.padding_top | append: 'px'
        assign padding_bottom = section.settings.padding_bottom | append: 'px'
        assign padding_top_tablet = section.settings.padding_top_tablet | append: 'px'
        assign padding_bottom_tablet = section.settings.padding_bottom_tablet | append: 'px'
        assign padding_top_mobile = section.settings.padding_top_mobile | append: 'px'
        assign padding_bottom_mobile = section.settings.padding_bottom_mobile | append: 'px'
        assign container = section.settings.container
        assign mobile_layout = section.settings.block_mobile_layout
        assign block_title = section.settings.block_title
        assign block_text = section.settings.block_text
        assign block_title_align = section.settings.block_title_align
        assign col = section.settings.col
        assign column = 3
        assign background_color = section.settings.background_color
        assign title_color = section.settings.title_color
        assign title_font = section.settings.title_font
        assign title_font_size = section.settings.title_font_size | plus: 0
        assign title_mobile_font_size = section.settings.title_mobile_font_size | append: 'px'
        assign title_font_weight = section.settings.title_font_weight
        assign title_text_transform = section.settings.title_text_transform
        assign image_border_radius = settings.image_border_radius
        assign image_effect = settings.image_effect
    -%}
    <style type="text/css" media="screen">
        :root {
            {% if title_font == 'font_1' %}
                --title-font-{{ section.id }}: var(--font-1-family);
            {% elsif title_font == 'font_2' %}
                --title-font-{{ section.id }}: var(--font-2-family);
            {% elsif title_font == 'font_3' %}
                --title-font-{{ section.id }}: var(--font-3-family);
            {% endif %}
        }

        #halo-custom-banner-center-mode-{{ section.id }}{
            padding-top: {{ padding_top }};
            padding-bottom: {{ padding_bottom }};
            {% if background_color != 'rgba(0,0,0,0)' and background_color != blank %}
                background: {{ background_color }};
            {% endif %}
        }

        #halo-custom-banner-center-mode-{{ section.id }} .banner-title{
            font-family: var(--title-font-{{ section.id }});
            font-size: {{ title_mobile_font_size }};
            font-weight: {{ title_font_weight }};
            text-transform: {{ title_text_transform }};
            color: {{ title_color }};
        }

        @media (max-width: 1024px) {
            #halo-custom-banner-center-mode-{{ section.id }}{
                padding-top: {{ padding_top_tablet }};
                padding-bottom: {{ padding_bottom_tablet }};
            }
        }

        @media (max-width: 550px) {
            #halo-custom-banner-center-mode-{{ section.id }}{
                padding-top: {{ padding_top_mobile }};
                padding-bottom: {{ padding_bottom_mobile }};
            }
        }

        @media (min-width: 551px){
            #halo-custom-banner-center-mode-{{ section.id }} .banner-title{
                font-size: {{ title_font_size | append: 'px' }};
            }
        }
    </style>
    <div class="halo-block halo-banner halo-custom-banner-center-mode" id="halo-custom-banner-center-mode-{{ section.id }}">
        <div class="container container-{{ container }}{% if mobile_layout == 'swipe' %} container-no-padding{% endif %}">
            {%- if block_title != blank or block_text != blank -%}
                <div class="halo-block-header">
                    <h3 class="title text-{{ block_title_align }}">
                        <span class="text">
                            {{ block_title | escape }}
                        </span>
                    </h3>
                    {%- if block_text != blank -%}
                        <span class="desc text-{{ block_title_align }}">
                            {{ block_text }}
                        </span>
                    {%- endif -%}
                </div>
            {%- endif -%}
            <div class="halo-block-content">
                <div class="halo-row halo-row--{{ col }} halo-row--{{ mobile_layout }} column-{{ column }} disable-scrollbar">
                    <div class="halo-row-item item item-odd">
                        {%- liquid
                            assign link_1 = section.settings.link_1
                            assign image_1 = section.settings.image_1
                            assign title_1 = section.settings.title_1
                        -%}
                        <div class="collections-item banner-item">
                            <div class="img-box image-{{ image_effect }} image-border-{{ image_border_radius }}">
                                {%- if image_1 != blank -%}
                                    <{% if link_1 !=blank %}a{% else %}div{% endif %} class="image image-adapt" {% if link_1 !=blank %} href="{{ link_1 }}" {% endif %} style="padding-top: {{ 1 | divided_by: image_1.aspect_ratio | times: 100 | append: '%' }}">
                                        <img srcset="{{ image_1 | img_url: 'master' }} 1x, {{ image_1 | img_url: 'master', scale: 2 }} 2x" src="{{ image_1 | img_url: 'master' }}" alt="{{ image_1.alt | default: shop.name | escape }}" loading="lazy">
                                    }
                                    </{% if link_1 !=blank %}a{% else %}div{% endif %}>
                                {%- else -%}
                                    <div class="image">
                                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                                    </div>
                                {%- endif -%}

                                {%- if title_1 != blank -%}
                                    <h4 class="banner-title">
                                        {%- if link_1 != blank -%}
                                            <a href="{{ link_1 }}">
                                        {%- endif -%}
                                            {{ title_1 | escape }}
                                        {%- if link_1 != blank -%}
                                            </a>
                                        {%- endif -%}
                                    </h4>
                                {%- endif -%}
                            </div>
                        </div>
                    </div>
                    <div class="halo-row-item item item-even">
                        {%- liquid
                            assign link_2 = section.settings.link_2
                            assign image_2 = section.settings.image_2
                            assign title_2 = section.settings.title_2
                        -%}
                        <div class="collections-item banner-item">
                            <div class="img-box image-{{ image_effect }} image-border-{{ image_border_radius }}">
                                {%- if image_2 != blank -%}
                                    <{% if link_2 !=blank %}a{% else %}div{% endif %} class="image image-adapt" {% if link_2 !=blank %} href="{{ link_2 }}" {% endif %} style="padding-top: {{ 1 | divided_by: image_2.aspect_ratio | times: 100 | append: '%' }}">
                                        <img srcset="{{ image_2 | img_url: 'master' }} 1x, {{ image_2 | img_url: 'master', scale: 2 }} 2x" src="{{ image_2 | img_url: 'master' }}" alt="{{ image_2.alt | default: shop.name | escape }}" loading="lazy">
                                    }
                                    </{% if link_2 !=blank %}a{% else %}div{% endif %}>
                                {%- else -%}
                                    <div class="image">
                                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                                    </div>
                                {%- endif -%}
                                {%- if title_2 != blank -%}
                                    <h4 class="banner-title">
                                        {%- if link_2 != blank -%}
                                            <a href="{{ link_2 }}">
                                        {%- endif -%}
                                            {{ title_2 | escape }}
                                        {%- if link_2 != blank -%}
                                            </a>
                                        {%- endif -%}
                                    </h4>
                                {%- endif -%}
                            </div>
                        </div>
                    </div>
                    <div class="halo-row-item item item-odd">
                        {%- liquid
                            assign link_3 = section.settings.link_3
                            assign image_3 = section.settings.image_3
                            assign title_3 = section.settings.title_3
                        -%}
                        <div class="collections-item banner-item">
                            <div class="img-box image-{{ image_effect }} image-border-{{ image_border_radius }}">
                                {%- if image_3 != blank -%}
