        assign show_add_to_cart = section.settings.show_add_to_cart
        assign title_color = section.settings.title_color
        assign title_color_active = section.settings.title_color_active
        assign title_tab_font_size = section.settings.title_tab_font_size | append: 'px'
        assign title_tab_font_weight = section.settings.title_tab_font_weight
        assign title_tab_transform = section.settings.title_tab_transform
        assign show_countdown = section.settings.show_countdown
        if show_countdown
        	assign countdown = section.settings.countdown
        	assign countdown_text = section.settings.countdown_text
        	assign countdown_style = settings.countdown_style
        	if countdown != blank
        		assign has_countdown = true
        	endif
            assign countdown_backg = section.settings.countdown_backg
            assign countdown_color = section.settings.countdown_color
            assign countdown_num_color = section.settings.countdown_num_color
        else
        	assign has_countdown = false
        endif
    -%}
    <style type="text/css" media="screen">
        #halo-product-block-{{ section.id }}{
            padding-top: {{ padding_top }};
            padding-bottom: {{ padding_bottom }};
        }

        #halo-product-block-{{ section.id }} .halo-block-header .tab-links{
            font-size: {{ title_tab_font_size }};
            text-transform: {{ title_tab_transform }};
            font-weight: {{title_tab_font_weight}};
            color: {{ title_color }}!important;
        }

        #halo-product-block-{{ section.id }} .halo-block-header .tab-links.active{
            color: {{ title_color_active }}!important;
        }

        #halo-product-block-{{ section.id }} .halo-countDown .text span{
            color: {{countdown_color}};
        }

        #halo-product-block-{{ section.id }}  .halo-countDown  .seperate{
            color: {{countdown_num_color}};  
        }

        #halo-product-block-{{ section.id }}  .halo-countDown.style-3  .seperate{
            color: {{countdown_backg}};  
        }

        #halo-product-block-{{ section.id }} .halo-countDown .num{
            color: {{countdown_num_color}};
        }

        #halo-product-block-{{ section.id }}  .halo-countDown.style-3 .num{
            background: {{ countdown_backg }};
            border-color: {{ countdown_backg }};  
        }

        {% if infinite_scroll %}
            #halo-product-block-{{ section.id }} .product-infinite-scroll .button{
                background: {{ infinite_scroll_backg }};
                border-color: {{ infinite_scroll_backg }};
                color: {{ infinite_scroll_color }};
                box-shadow: none!important;
            }
        {% endif %}

        @media (max-width: 1024px) {
            #halo-product-block-{{ section.id }}{
                padding-top: {{ padding_top_tablet }};
                padding-bottom: {{ padding_bottom_tablet }};
            }
        }

        @media (max-width: 550px) {
            #halo-product-block-{{ section.id }}{
                padding-top: {{ padding_top_mobile }};
                padding-bottom: {{ padding_bottom_mobile }};
            }
        }

        @media (min-width: 1025px){
            {% if infinite_scroll %}
                #halo-product-block-{{ section.id }} .product-infinite-scroll .button:hover{
                    color: var(--btn-1-color-hover);
                    background: var(--btn-1-bg-hover);
                    border-color: var(--btn-1-border-hover);
                }
            {% endif %}
        }
    </style>
    <div class="halo-block halo-product-block halo-product-tabs halo-product-tabs-2" id="halo-product-block-{{ section.id }}"
    	data-product-tabs-2
        data-limit="{{ limit }}"
        data-layout="grid"
        data-image-ratio="{{ image_ratio }}"
        data-show-add-to-cart="{{ show_add_to_cart }}"
        data-ratio="{{ portrait_aspect_ratio }}"
        sectionId="{{ section.id }}"
        data-url = "{{ collection }}"
    >
    	<div class="container container-{{ container }}">
    		<div class="halo-block-header list-product-tabs text-{{ block_title_align }} flex align-center{% if block_title_align != 'center' %} justify-between{% else %} flex-wrap justify-center{% endif %}">
    			{%-liquid
    				if block_title_align == 'left'
    					if block_title != blank and has_countdown
    						assign align_1 = 'left'
    						assign align_2 = 'center'
    						assign align_3 = 'right'
    					elsif block_title != blank
    						assign align_1 = 'left'
    						assign align_2 = 'right'
    					elsif has_countdown
    						assign align_2 = 'left'
    						assign align_3 = 'right'
    					endif
    				elsif block_title_align == 'right'
    					if block_title != blank and has_countdown
    						assign align_1 = 'right'
    						assign align_2 = 'center'
    						assign align_3 = 'left'
    					elsif block_title != blank
    						assign align_1 = 'right'
    						assign align_2 = 'left'
    					elsif has_countdown
    						assign align_2 = 'right'
    						assign align_3 = 'left'
    					endif
    				elsif block_title_align == 'center'
    					assign align_1 = 'center'
						assign align_2 = 'center'
						assign align_3 = 'center'
    				endif
    			-%}
    			{%- if block_title != blank -%}
                    <h3 class="title text-{{ align_1 }}">
                        <span class="text">
                            {{ block_title | escape }}
                        </span>
                    </h3>
                    {%- if block_text != blank -%}
                        <span class="desc text-{{ align_1 }}">
                            {{ block_text }}
                        </span>
                    {%- endif -%}
                {%- endif -%}
                <ul class="product-tabs-list style-2 list-unstyled disable-scrollbar flex-all-1 text-{{ align_2 }}">
                	<li>
                        <a href="#" data-target="#product-tab-all-{{ section.id }}" data-product-tabs-title-2 data-collection="{{ collection }}" data-collection-tag="all" class="tab-links tab-links--filter active" role="button">
                            <span class="text">
                                {{ 'general.navigation.all' | t }}
                            </span>
                        </a>
                    </li>
                    {%- for block in section.blocks -%}
                        {%- liquid
                            assign title = block.settings.title
                            assign tag = block.settings.tag | handleize
                        -%}
                        <li>
                            <a href="#" data-target="#product-tab-{{ block.id }}" data-product-tabs-title-2 data-collection-tag="{{ tag }}" class="tab-links tab-links--filter" role="button">
                                <span class="text">
                                    {{ title | escape }}
                                </span>
                            </a>
                        </li>
                    {%- endfor -%}
                </ul>
                {%- if has_countdown -%}
                	<div class="halo-countDown block-countdown text-{{ align_3 }} style-{{ countdown_style }}" data-product-tabs-countdown="{{ countdown }}"></div>
                {%- endif -%}
    		</div>
    		<div class="halo-block-content product-tabs-content">
    			<div class="tab-content active" data-product-TabContent id="product-tab-all-{{ section.id }}">
                    <div class="products-content products-grid column-{{ column }} col-{{ col }} shuffle-container" data-products-to-show="{{ limit }}">
                        {%- for product in collections[collection].products limit: limit -%}
                            <div class="product" data-tag="{{ listTag }}">
                                {% render 'product-card-loading',
                                    product_card_product: product,
                                    media_size: image_ratio,
                                    show_add_to_cart: show_add_to_cart,
                                    portrait_aspect_ratio: portrait_aspect_ratio,
                                    sectionId: section.id
                                %}
                            </div>
                        {%- else -%}
                            {%- for product in (1..limit) -%}
                                <div class="product">
                                    {% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
                                    {% render 'product-card-placeholder',
                                        index: current
                                    %}
                                </div>
                            {%- endfor -%}
                        {%- endfor -%}
                        <div class="product sizer-element"></div>
                    </div>
                    {%- if infinite_scroll and collections[collection].handle != '' -%}
                    	{%- liquid
	                        assign product_limit = limit
	                        assign product_total = collections[collection].all_products_count
	                    -%}
	                    {%- if product_total > product_limit -%}
	                    	<div class="product-infinite-scroll text-center" data-product-infinite>
	                    		<a class="button button--primary"
	                                data-collection="{{ collection.handle }}"
	                                data-limit="{{ product_limit }}"
	                                data-page="2"
	                                data-total="{{ product_total }}"
	                                data-image-ratio="{{ image_ratio }}"
	                                data-ratio="{{ portrait_aspect_ratio }}"
	                                data-show-add-to-cart="{{ show_add_to_cart }}"
	                                href="#"
	                                sectionId="{{ section.id }}"
	                                {% if product_total <= product_limit %}
	                                    disabled="disabled"
	                                {% endif %}
	                            >
	                                {{ 'general.button_load_more.default' | t }}
	                            </a>
	                    	</div>
	                    {%- endif -%}
                    {%- endif -%}
                </div>
    		</div>
    	</div>
    </div>
    {{ 'halo-masonry.js' | asset_url | script_tag }}
    {%- if has_countdown -%}
		<script type="text/javascript">
			var wrapper = $('#halo-product-block-{{ section.id }} [data-product-tabs-countdown]'),
	            countDown = '{{ countdown }}',
	            countDownDate = new Date(countDown).getTime(),
	            countdownText = `{{ countdown_text }}`;

	        var countdownfunction = setInterval(function() {
	            var now = new Date().getTime(),
	                distance = countDownDate - now;

	            if (distance < 0) {
	                clearInterval(countdownfunction);
	                wrapper.remove();
	            } else {
	                var days = Math.floor(distance / (1000 * 60 * 60 * 24)).toString().padStart(2, '0'),
	                    hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60)).toString().padStart(2, '0'),
	                    minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60)).toString().padStart(2, '0'),
	                    seconds = Math.floor((distance % (1000 * 60)) / 1000).toString().padStart(2, '0'),
	                    strCountDown;

	                    {% if countdown_style == '1' %}
		                    strCountDown = `<span class="text"><span>${countdownText}</span></span><span class="num days">${days}<span>${window.countdown.days}</span></span> <span class="seperate">:</span>\
		                        <span class="num hours">${hours}<span>${window.countdown.hour}</span></span>\
		                        <span class="num minutes">${minutes}<span>${window.countdown.min}</span></span>\
		                        <span class="num seconds">${seconds}<span>${window.countdown.sec}</span></span>`;
		                {% elsif countdown_style == '2' %}
		                	strCountDown = `<span class="text"><span>${countdownText}</span></span><span class="num days">${days}<span>${window.countdown.day}</span></span><span class="seperate">:</span>\
		                        <span class="num hours">${hours}</span><span class="seperate">:</span>\
		                        <span class="num minutes">${minutes}</span><span class="seperate">:</span>\
		                        <span class="num seconds">${seconds}</span>`;
		                {% elsif countdown_style == '3' %}
		                	strCountDown = `<span class="text"><span>${countdownText}</span></span><span class="num days">${days}<span>${window.countdown.day}</span></span> <span class="seperate">:</span>\
		                        <span class="num hours">${hours}</span><span class="seperate">:</span>\
		                        <span class="num minutes">${minutes}</span><span class="seperate">:</span>\
		                        <span class="num seconds">${seconds}</span>`;
		                {% endif %}

	                wrapper.html(strCountDown);
	            }
	        }, 1000);
		</script>
	{%- endif -%}
{%- endif -%}
