{%- if section.settings.show_banner_with_custom_link -%}
    {%- liquid
        assign padding_top = section.settings.padding_top | append: 'px'
        assign padding_bottom = section.settings.padding_bottom | append: 'px'
        assign padding_top_tablet = section.settings.padding_top_tablet | append: 'px'
        assign padding_bottom_tablet = section.settings.padding_bottom_tablet | append: 'px'
        assign padding_top_mobile = section.settings.padding_top_mobile | append: 'px'
        assign padding_bottom_mobile = section.settings.padding_bottom_mobile | append: 'px'
        assign container = section.settings.container
        assign layout_style = section.settings.style
        assign image = section.settings.image
        assign mobile_image = section.settings.mobile_image
        assign subtitle = section.settings.subtitle
        assign title = section.settings.title
        assign align = section.settings.align
        assign title_color = section.settings.title_color
        assign text_color = section.settings.text_color
        assign sub_title_font = section.settings.sub_title_font
        assign sub_title_font_size = section.settings.sub_title_font_size | append: 'px'
        assign sub_title_font_weight = section.settings.sub_title_font_weight
        assign sub_title_text_transform = section.settings.sub_title_text_transform
        assign title_font = section.settings.title_font
        assign title_font_size = section.settings.title_font_size
        assign title_mobile_font_size = section.settings.title_mobile_font_size | append: 'px'
        assign title_font_weight = section.settings.title_font_weight
        assign title_text_transform = section.settings.title_text_transform
        assign show_countdown = section.settings.show_countdown
        assign countdown_time = section.settings.countdown_time
        assign block_title = section.settings.block_title
        assign block_text = section.settings.block_text
        assign block_title_align = section.settings.block_title_align
    -%}
    <style type="text/css" media="screen">
        :root {
            {% if sub_title_font == 'font_1' %}
                --sub-title-font-{{ section.id }}: var(--font-1-family);
            {% elsif sub_title_font == 'font_2' %}
                --sub-title-font-{{ section.id }}: var(--font-2-family);
            {% elsif sub_title_font == 'font_3' %}
                --sub-title-font-{{ section.id }}: var(--font-3-family);
            {% endif %}
            {% if title_font == 'font_1' %}
                --title-font-{{ section.id }}: var(--font-1-family);
            {% elsif title_font == 'font_2' %}
                --title-font-{{ section.id }}: var(--font-2-family);
            {% elsif title_font == 'font_3' %}
                --title-font-{{ section.id }}: var(--font-3-family);
            {% endif %}
        }

        #halo-customlink-banner-{{ section.id }}{
            padding-top: {{ padding_top }};
            padding-bottom: {{ padding_bottom }};
        }

        #halo-customlink-banner-{{ section.id }} .sub-title,
        #halo-customlink-banner-{{ section.id }} .wrapper-button .link{
            font-family: var(--sub-title-font-{{ section.id }});
            font-size: {{ sub_title_font_size }};
            text-transform: {{ sub_title_text_transform }};
            color: {{ text_color }};
        }

        #halo-customlink-banner-{{ section.id }} .sub-title{
            font-weight: {{ sub_title_font_weight }};
        }

        #halo-customlink-banner-{{ section.id }} .banner-title,
        #halo-customlink-banner-{{ section.id }} .banner-view-countDown .item .num,
        #halo-customlink-banner-{{ section.id }} .banner-view-countDown .item .text{
            font-family: var(--title-font-{{ section.id }});
            font-size: {{ title_mobile_font_size }};
            font-weight: {{ title_font_weight }};
            text-transform: {{ title_text_transform }};
            color: {{ title_color }};
        }

        #halo-customlink-banner-{{ section.id }} .banner-view-countDown .item .num,
        #halo-customlink-banner-{{ section.id }} .banner-view-countDown .item .text{
            color: {{ text_color }};
        }

        @media (max-width: 1024px) {
            #halo-customlink-banner-{{ section.id }}{
                padding-top: {{ padding_top_tablet }};
                padding-bottom: {{ padding_bottom_tablet }};
            }
        }

        @media (max-width: 550px) {
            #halo-customlink-banner-{{ section.id }}{
                padding-top: {{ padding_top_mobile }};
                padding-bottom: {{ padding_bottom_mobile }};
            }
        }

        {% if title_font_size >= 60 %}
            @media (min-width: 768px){
                #halo-customlink-banner-{{ section.id }} .banner-title{
                    font-size: {{ title_font_size | minus: 30 | append: 'px' }};
                }
            }

            @media (min-width: 1025px){
                #halo-customlink-banner-{{ section.id }} .banner-title{
                    font-size: {{ title_font_size | minus: 20 | append: 'px' }};
                }
            }

            @media (min-width: 1600px) {
                #halo-customlink-banner-{{ section.id }} .banner-title,
                #halo-customlink-banner-{{ section.id }} .banner-view-countDown .item .text,
                #halo-customlink-banner-{{ section.id }} .banner-view-countDown .item .num{
                    font-size: {{ title_font_size | append: 'px' }};
                }
            }
        {% else %}
            @media (min-width: 551px) {
                #halo-customlink-banner-{{ section.id }} .banner-title,
                #halo-customlink-banner-{{ section.id }} .banner-view-countDown .item .text,
                #halo-customlink-banner-{{ section.id }} .banner-view-countDown .item .num{
                    font-size: {{ title_font_size | append: 'px' }};
                }
            }
        {% endif %}
    </style>
    
    <div class="halo-block halo-banner fullwidth-banner halo-customlink-banner style-{{ layout_style }}" id="halo-customlink-banner-{{ section.id }}">
        <div class="container container-{{ container }}">
            {%- if block_title != blank or block_text != blank -%}
                <div class="halo-block-header">
                    {%- if block_title != blank -%}
                        <h3 class="title text-{{ block_title_align }}">
                            <span class="text{% if block_icon != blank %} text-2{% endif %}">
                                {{ block_title | escape }}
                            </span>
                        </h3>
                    {%- endif -%}
                    {%- if block_text != blank -%}
                        <span class="desc text-{{ block_title_align }}">
                            {{ block_text }}
                        </span>
                    {%- endif -%}
                </div>
            {%- endif -%}
            <div class="halo-block-content">
                <div class="halo-banner-wrapper">
                    <div class="item">
                        <div class="banner-item">
                            <div class="img-box img-box--mobile">
                                {%- if image != blank -%}
                                    <{% if link != blank %}a{% else %}div{% endif %} class="image image-adapt" {% if link != blank %} href="{{ link }}"{% endif %} style="padding-top: {{ 1 | divided_by: image.aspect_ratio | times: 100 | append: '%' }}">
                                        <img srcset="{{ image | img_url: '1920x' }} 1x, {{ image | img_url: '1920x', scale: 2 }} 2x" src="{{ image | img_url: '1920x', crop: 'center' }}" alt="{{ image.alt | default: shop.name | escape }}" loading="lazy">
                                    </{% if link != blank %}a{% else %}div{% endif %}>
                                {%- else -%}
                                    <{% if link != blank %}a{% else %}div{% endif %} class="image" {% if link != blank %} href="{{ link }}"{% endif %}>
                                        {% capture current %}{% cycle 1, 2 %}{% endcapture %}
                                        {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}   
                                    </{% if link != blank %}a{% else %}div{% endif %}>
                                {%- endif -%}
                                {%- if mobile_image != blank -%}
                                    <{% if link != blank %}a{% else %}div{% endif %} class="image image-mobile image-adapt" {% if link != blank %} href="{{ link }}"{% endif %} style="padding-top: {{ 1 | divided_by: mobile_image.aspect_ratio | times: 100 | append: '%' }}">
                                        <img srcset="{{ mobile_image | img_url: 'master' }} 1x, {{ mobile_image | img_url: 'master', scale: 2 }} 2x" src="{{ mobile_image | img_url: 'master' }}" alt="{{ mobile_image.alt | default: shop.name | escape }}" loading="lazy">
                                    </{% if link != blank %}a{% else %}div{% endif %}>
                                {%- else -%}
                                    {%- if image != blank -%}
                                        <{% if link != blank %}a{% else %}div{% endif %} class="image image-mobile image-adapt" {% if link != blank %} href="{{ link }}"{% endif %} style="padding-top: 100%">
                                            <img srcset="{{ image | img_url: '420x', crop: 'center' }} 1x, {{ image | img_url: '420x', crop: 'center',  scale: 2 }} 2x" src="{{ image | img_url: '420x', crop: 'center' }}" alt="{{ image.alt | default: shop.name | escape }}" loading="lazy">
                                        </{% if link != blank %}a{% else %}div{% endif %}>
                                    {%- else -%}
                                        <{% if link != blank %}a{% else %}div{% endif %} class="image image-mobile" {% if link != blank %} href="{{ link }}"{% endif %}>
                                            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                                        </{% if link != blank %}a{% else %}div{% endif %}>
                                    {%- endif -%}
                                {%- endif -%}
                                <div class="video-banner">
                                    <a href="javascript:void(0)" class="halo-modal-close clearfix" data-close-video role="button">
                                        <span class="visually-hidden">{{ 'general.common.close' | t }}</span>
                                        {% render 'icon-close' %}
                                    </a>
                                    <div class="modal-content-video"></div>
                                </div>
                            </div>
                            {%- if title != blank or subtitle != blank -%}
                                <div class="content-box content-box--absolute content-box--full text-center">
                                    {%- if subtitle != blank -%}
                                        <h5 class="sub-title">
                                            {{ subtitle | escape }}
                                        </h5>
                                    {%- endif -%}
                                    {%- if title != blank -%}
                                        <h4 class="banner-title">
                                            {{ title | escape }}
                                        </h4>
                                    {%- endif -%}
                                    {%- if show_countdown -%}
                                        <div class="banner-view-countDown" data-countdown-banner>
                                            <div class="countDown countdown_{{ section.id }} clearfix" data-countdown-id="{{ section.id }}" data-countdown="{{ countdown_time }}">
                                                <span class="item animated-loading">
                                                    <span class="num">151</span>
                                                    <span class="text">d</span>
                                                </span>
                                                <span class="item animated-loading">
                                                    <span class="num">8</span>
                                                </span>
                                                <span class="item minnute animated-loading">
                                                    <span class="num">23</span>
                                                </span>
                                                <span class="item second animated-loading">
                                                    <span class="num" >00</span>
                                                </span>
                                            </div>
                                        </div>
                                    {%- endif -%}

                                    {%- if layout_style == '2' or layout_style == '3'-%}
                                        {%- if section.blocks.size > 0 -%}
                                            <div class="wrapper-button">
                                                {%- for block in section.blocks -%}
                                                    {%- liquid
                                                        assign btn = block.settings.btn
                                                        assign btn_text = block.settings.btn_text
                                                        assign link = block.settings.link
                                                    -%}
                                                    {%- if btn_text != blank -%}
                                                        {%- if block.settings.button_option == 'link' -%}
                                                            <{% if link != blank %}a{% else %}div{% endif %} {% if link != blank %} href="{{ link }}"{% endif %} class="banner-button{% if layout_style == '2' %} button button-{{ btn }}{% else %} link text-underline{% endif %}">
                                                                {%- if layout_style == '3' -%}
                                                                    <span class="text">
                                                                {%- endif -%}
                                                                    {{ btn_text | escape }}
                                                                {%- if layout_style == '3' -%}
                                                                    </span>
                                                                {%- endif -%}
                                                            </{% if link != blank %}a{% else %}div{% endif %}>
                                                        {%- else -%}
                                                            <a class="banner-button banner-button{% if layout_style == '2' %} button button-{{ btn }}{% else %} link text-underline{% endif %}{% if block.settings.button_option == 'video_youtube' %} video_youtube{% else %} video_mp4{% endif %}" href="javascript:void(0);" aria-label="link" data-video-banner data-video="{% if block.settings.button_option == 'video_youtube' %}{{ block.settings.video_link }}{% else %}{{ block.settings.video_mp4_link }}{% endif %}" role="button">
                                                                {% render 'icon-pause-2-button' %} 
                                                                {%- if layout_style == '3' -%}
                                                                    <span class="text">
                                                                {%- endif -%}
                                                                    {{ btn_text | escape }}
                                                                {%- if layout_style == '3' -%}
                                                                    </span>
                                                                {%- endif -%}
                                                            </a>
                                                        {%- endif -%}
                                                    {%- endif -%}
                                                {%- endfor -%}
                                            </div>
                                        {%- endif -%}
                                    {%- endif -%}
                                </div>
                            {%- endif -%}
                            {%- if layout_style == '1' -%}
                                {%- if section.blocks.size > 0 -%}
                                    <div class="wrapper-button">
                                        {%- for block in section.blocks -%}
                                            {%- liquid
                                                assign btn = block.settings.btn
                                                assign btn_text = block.settings.btn_text
                                                assign link = block.settings.link
                                            -%}
                                            {%- if btn_text != blank -%}
                                                {%- if block.settings.button_option == 'link' -%}
                                                    <{% if link != blank %}a{% else %}div{% endif %} {% if link != blank %} href="{{ link }}"{% endif %} class="banner-button button button-{{ btn }}">
                                                        {{ btn_text | escape }}
                                                    </{% if link != blank %}a{% else %}div{% endif %}>
                                                {%- else -%}
                                                    <a class="banner-button button button-{{ btn }}{% if block.settings.button_option == 'video_youtube' %} video_youtube{% else %} video_mp4{% endif %}" href="javascript:void(0);" aria-label="link" data-video-banner data-video="{% if block.settings.button_option == 'video_youtube' %}{{ block.settings.video_link }}{% else %}{{ block.settings.video_mp4_link }}{% endif %}" role="button">
                                                        {% render 'icon-pause-2-button' %} {{ btn_text | escape }}
                                                    </a>
                                                {%- endif -%}
                                            {%- endif -%}
                                        {%- endfor -%}
                                    </div>
                                {%- endif -%}
                            {%- endif -%}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{%- endif -%}
