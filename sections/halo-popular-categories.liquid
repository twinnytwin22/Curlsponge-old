    assign padding_bottom_tablet = section.settings.padding_bottom_tablet | append: 'px'
    assign padding_top_mobile = section.settings.padding_top_mobile | append: 'px'
    assign padding_bottom_mobile = section.settings.padding_bottom_mobile | append: 'px'
    assign container = section.settings.container
    assign block_title = section.settings.block_title
    assign block_text = section.settings.block_text
    assign block_title_align = section.settings.block_title_align
    assign mobile_layout = section.settings.block_mobile_layout
    assign column = section.settings.item_per_row
    assign align = section.settings.align
    assign col = section.settings.grid_col
    assign grid_style = section.settings.grid_style
    assign image_ratio = section.settings.image_ratio
    assign portrait_aspect_ratio = section.settings.portrait_aspect_ratio | append: '%'
    assign show_collection_product_count = section.settings.show_collection_product_count
    assign bg_color = section.settings.bg_color
    assign title_font = section.settings.title_font
    assign title_font_size = section.settings.title_font_size
    assign title_font_weight = section.settings.title_font_weight
    assign title_text_transform = section.settings.title_text_transform
    assign title_color = section.settings.title_color
    assign text_color = section.settings.text_color
    assign link_color = section.settings.link_color
    assign image_border_radius = settings.image_border_radius
    assign image_effect = settings.image_effect
-%}

<style type="text/css" media="screen">
    :root {
        {% if title_font == 'font_1' %}
            --title-font-{{ section.id }}: var(--font-1-family);
        {% elsif title_font == 'font_2' %}
            --title-font-{{ section.id }}: var(--font-2-family);
        {% elsif title_font == 'font_3' %}
            --title-font-{{ section.id }}: var(--font-3-family);
        {% endif %}
    }

   #PopularCategoriesSection-{{ section.id }}{
        padding-top: {{ padding_top }};
        padding-bottom: {{ padding_bottom }};
    }

    {% if bg_color != 'rgba(0,0,0,0)' and bg_color != blank %}
       #PopularCategoriesSection-{{ section.id }}{
            background: {{ bg_color }};
        }
    {% endif %}

   #PopularCategoriesSection-{{ section.id }} .content-box .heading,
   #PopularCategoriesSection-{{ section.id }} .collection-list-item .custom-content .title{
        font-family: var(--title-font-{{ section.id }});
        font-size: {{ title_font_size | append: 'px' }};
        font-weight: {{ title_font_weight }};
        text-transform: {{ title_text_transform }};
        color: {{ title_color }};
    }

   #PopularCategoriesSection-{{ section.id }} .content-box .count{
        color: {{ text_color }};
    }

    #PopularCategoriesSection-{{ section.id }} .custom-content .link{
        color: {{ link_color }};
        font-weight: {{ title_font_weight }};
    }

    @media (max-width: 1024px) {
       #PopularCategoriesSection-{{ section.id }}{
            padding-top: {{ padding_top_tablet }};
            padding-bottom: {{ padding_bottom_tablet }};
        }
    }

    @media (max-width: 550px) {
       #PopularCategoriesSection-{{ section.id }}{
            padding-top: {{ padding_top_mobile }};
            padding-bottom: {{ padding_bottom_mobile }};
        }
    }
</style>

<div class="test-{{type}} halo-block halo-banner halo-popular-categories style-{{ grid_style }}" id="PopularCategoriesSection-{{ section.id }}" data-section="{{ section.id }}">
    <div class="container container-{{ container }} {% if mobile_layout == 'swipe' %} container-no-padding{% endif %}">
        {%- if block_title != blank -%}
            <div class="halo-block-header">
                <h3 class="title text-{{ block_title_align }}">
                    <span class="text">
                        {{ block_title | escape }}
                    </span>
                </h3>
                {%- if block_text != blank -%}
                    <span class="desc text-{{ block_title_align }}">
                        {{ block_text }}
                    </span>
                {%- endif -%}
            </div>
        {%- endif -%}
        <div class="halo-block-content">
            <div class="halo-row halo-row--{{ col }} column-{{ column }} halo-row--{{ mobile_layout }} disable-scrollbar">
                {%- for block in section.blocks -%}
                    {% assign collection = collections[block.settings.collection] %}
                    <div class="collection-list-item halo-row-item">
                        {% render 'list-collection-item-2',
                            collection: collection,
                            block: block,
                            image_ratio: image_ratio,
                            portrait_aspect_ratio: portrait_aspect_ratio,
                            show_collection_product_count: show_collection_product_count,
                            align:align,
                            image_border_radius: image_border_radius,
                            image_effect: image_effect,
                            grid_style: grid_style
                        %}
                    </div>
                {%- endfor -%}
            </div>
        </div>
    </div>
</div>
