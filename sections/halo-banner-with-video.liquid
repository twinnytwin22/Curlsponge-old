{%- if section.settings.show_banner_with_video -%}
	{%- liquid
        assign padding_top = section.settings.padding_top | append: 'px'
        assign padding_bottom = section.settings.padding_bottom | append: 'px'
        assign padding_top_tablet = section.settings.padding_top_tablet | append: 'px'
        assign padding_bottom_tablet = section.settings.padding_bottom_tablet | append: 'px'
        assign padding_top_mobile = section.settings.padding_top_mobile | append: 'px'
        assign padding_bottom_mobile = section.settings.padding_bottom_mobile | append: 'px'
        assign padding_top_section = section.settings.padding_top_section | append: 'px'
        assign container = section.settings.container
        assign image = section.settings.image
        assign mobile_image = section.settings.mobile_image
        assign title = section.settings.title
        assign text = section.settings.text
        assign title_color = section.settings.title_color
        assign text_color = section.settings.text_color
        assign text_font_size = section.settings.text_font_size | append: 'px'
        assign text_font_weight = section.settings.text_font_weight
        assign text_text_transform = section.settings.text_text_transform
        assign title_font = section.settings.title_font
        assign title_font_size = section.settings.title_font_size
        assign title_mobile_font_size = section.settings.title_mobile_font_size | append: 'px'
        assign title_font_weight = section.settings.title_font_weight
        assign title_text_transform = section.settings.title_text_transform
        assign position_x = section.settings.position_x
        assign position_y = section.settings.position_y
        assign align = section.settings.align
        assign enable_parallax = section.settings.enable_parallax
    -%}
	<style type="text/css" media="screen">
		:root {
            {% if title_font == 'font_1' %}
                --title-font-{{ section.id }}: var(--font-1-family);
            {% elsif title_font == 'font_2' %}
                --title-font-{{ section.id }}: var(--font-2-family);
            {% elsif title_font == 'font_3' %}
                --title-font-{{ section.id }}: var(--font-3-family);
            {% endif %}
        }

        #halo-banner-with-video-{{ section.id }}{
            padding-top: {{ padding_top }};
            padding-bottom: {{ padding_bottom }};
        }

        #halo-banner-with-video-{{ section.id }} .banner-title{
            font-family: var(--title-font-{{ section.id }});
            font-size: {{ title_mobile_font_size }};
            font-weight: {{ title_font_weight }};
            text-transform: {{ title_text_transform }};
            color: {{ title_color }};
        }

        #halo-banner-with-video-{{ section.id }} .banner-text{
            font-size: {{ text_font_size }};
            font-weight: {{ text_font_weight }};
            text-transform: {{ text_text_transform }};
            color: {{ text_color }};
        }

        #halo-banner-with-video-{{ section.id }} .banner-icon .icon{
        	fill: {{ text_color }};
        }

        @media (max-width: 1024px) {
            #halo-banner-with-video-{{ section.id }}{
                padding-top: {{ padding_top_tablet }};
                padding-bottom: {{ padding_bottom_tablet }};
            }

            {% if enable_parallax %}
            	#halo-banner-with-video-{{ section.id }} .banner-parallax{
            		background-attachment: initial;
            		background-size: cover;
            	}
            {% endif %}
        }

        @media (max-width: 550px) {
            #halo-banner-with-video-{{ section.id }}{
                padding-top: {{ padding_top_mobile }};
                padding-bottom: {{ padding_bottom_mobile }};
            }
        }

        {% if title_font_size >= 60 %}
            @media (min-width: 768px){
                #halo-banner-with-video-{{ section.id }} .banner-title{
                    font-size: {{ title_font_size | minus: 30 | append: 'px' }};
                }
            }

            @media (min-width: 1025px){
                #halo-banner-with-video-{{ section.id }} .banner-title{
                    font-size: {{ title_font_size | minus: 20 | append: 'px' }};
                }
            }

            @media (min-width: 1600px) {
                #halo-banner-with-video-{{ section.id }} .banner-title{
                    font-size: {{ title_font_size | append: 'px' }};
                }
            }
        {% else %}
            @media (min-width: 551px) {
                #halo-banner-with-video-{{ section.id }} .banner-title{
                    font-size: {{ title_font_size | append: 'px' }};
                }
            }
        {% endif %}
    </style>
    <div class="halo-block halo-banner halo-banner-with-video" id="halo-banner-with-video-{{ section.id }}">
    	<div class="container container-{{ container }}">
    		<div class="halo-block-content banner-with-video">
    			<div class="halo-banner-wrapper">
    				<div class="item item-{{ section.id }}" data-deferred-video id="deferred-video-{{ video.id }}">
    					<div class="banner-item{% if enable_parallax %} banner-parallax{% endif %}">
    						<div class="img-box img-box--mobile">
    							{%- if image != blank -%}
                                    <div class="image image-adapt"
                                    	style="
	                                    {% if enable_parallax %}
	                                        background-image:url({{ image | img_url: 'master' }});
	                                        background-attachment: fixed;
	                                        background-repeat: no-repeat;
	                                        background-position: center;
	                                        background-size: cover;
	                                    {% endif %}
                                        padding-top: {{ 1 | divided_by: image.aspect_ratio | times: 100 | append: '%' }}"
                                    >
                                    {%- unless enable_parallax -%}
                                        <img srcset="{{ image | img_url: '1920x' }} 1x, {{ image | img_url: '1920x', scale: 2 }} 2x" src="{{ image | img_url: '1920x', crop: 'center' }}" alt="{{ image.alt | default: shop.name | escape }}" loading="lazy">
                                    {%- endunless -%}
                                    </div>
                                {%- else -%}
                                    <div class="image">
                                        {% capture current %}{% cycle 1, 2 %}{% endcapture %}
                                        {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}   
                                    </div>
                                {%- endif -%}
                                {%- if mobile_image != blank -%}
                                    <div class="image image-mobile image-adapt" style="padding-top: {{ 1 | divided_by: mobile_image.aspect_ratio | times: 100 | append: '%' }}">
                                        <img srcset="{{ mobile_image | img_url: 'master' }} 1x, {{ mobile_image | img_url: 'master', scale: 2 }} 2x" src="{{ mobile_image | img_url: 'master' }}" alt="{{ mobile_image.alt | default: shop.name | escape }}" loading="lazy">
                                    </div>
                                {%- else -%}
                                    {%- if image != blank -%}
                                        <div class="image image-mobile image-adapt" style="padding-top: 100%">
                                            <img srcset="{{ image | img_url: '420x', crop: 'center' }} 1x, {{ image | img_url: '420x', crop: 'center',  scale: 2 }} 2x" src="{{ image | img_url: '420x', crop: 'center' }}" alt="{{ image.alt | default: shop.name | escape }}" loading="lazy">
                                        </div>
                                    {%- else -%}
                                        <div class="image image-mobile">
                                            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                                        </div>
                                    {%- endif -%}
                                {%- endif -%}
    						</div>
                            <div class="content-box content-box--absolute content-box--{{ position_x }} content-box--{{ position_y }} text-{{ align }}">
                                {%- if title != blank -%}
                                    <h4 class="banner-title">
                                        {{ title | escape }}
                                    </h4>
                                {%- endif -%}
                                {%- if text != blank -%}
                                    <span class="banner-text">
                                        {{ text }}
                                    </span>
                                {%- endif -%}
                                <div class="banner-icon clearfix">
                                    <a class="{% if section.settings.video_option == 'video_youtube' %} video_youtube{% else %} video_mp4{% endif %}" href="javascript:void(0);" aria-label="link" data-video-banner data-video="{% if section.settings.video_option == 'video_youtube' %}{{ section.settings.video_link }}{% else %}{{ section.settings.video_mp4_link }}{% endif %}" role="button">
                                        {% render 'icon-play',
                                            icon_play: 'circle'
                                        %}
                                        <span class="text">
                                            {{ 'accessibility.play' | t }}
                                        </span>
                                    </a>
                                </div>
                            </div>
                            <div class="video-banner">
                                    <a href="javascript:void(0)" class="halo-modal-close clearfix" data-close-video role="button">
                                    <span class="visually-hidden">{{ 'general.common.close' | t }}</span>
                                    {% render 'icon-close' %}
                                </a>
                                <div class="modal-content-video"></div>
                            </div>
    					</div>
    				</div>
    			</div>
    		</div>
    	</div>
    </div>
{%- endif -%}
