<div class="menu-lv__dropdownmenu{% if resize_menu %} hide{% else %}{% if settings.layout == '2' %} menu-lv__dropdownmenu--border{% endif %}{% endif %}">
    <ul class="menu-lv__list list-menu list-unstyled motion-reduce" role="list">
        <li class="menu-lv-item menu-lv-2 nav-title-mobile text-center">
            <span class="icon-dropdown">
                {% render 'icon-long-arrow' %}
            </span>
            <span class="menu-lv-2__action link focus-inset">
                <span class="text">
                    {{ link.title | escape }}
                </span>
            </span>
        </li>
        <li class="menu-lv-item menu-lv-2 text-left nav-all-mobile">
            <a href="{{ link.url }}" class="menu-lv-2__action list-menu__item list-menu__item--end link focus-inset"{% if childlink.current %} aria-current="page"{% endif %}>
                <span class="text">
                    {{ 'general.navigation.go_to' | t : name : link.title | escape }}
                </span>
            </a>
        </li>
        {%- for childlink in link.links -%}
            {% assign childtitle = childlink.title | escape | downcase | handle %}
            <li class="menu-lv-item menu-lv-2 text-left{% if childlink.links != blank %} dropdown{% endif %}{% if sale_item_lv2 contains childtitle %} menu-sale{% endif %}{% if show_label_blink %} menu-lv-blink{% endif %}">
                {%- if childlink.links == blank -%}
                    <a href="{{ childlink.url }}" class="menu-lv-2__action list-menu__item list-menu__item--end link focus-inset"{% if childlink.current %} aria-current="page"{% endif %}>
                        <span class="text">
                            {{ childlink.title | escape }}
                        </span>
                        {%- if new_label_2 contains childtitle -%}
                            <span class="label new-label">
                                {{ 'general.navigation.new_label' | t }}
                            </span>
                        {%- elsif sale_label_2 contains childtitle -%}
                            <span class="label sale-label">
                                {{ 'general.navigation.sale_label' | t }}
                            </span>
                        {%- elsif hot_label_2 contains childtitle -%}
                            <span class="label hot-label">
                                {{ 'general.navigation.hot_label' | t }}
                            </span>
                        {%- endif -%}
                    </a>
                {%- else -%}
                    <p class="menu-lv-2__action link list-menu__item focus-inset">
                        <a class="text" href="{{ childlink.url }}">
                            {{ childlink.title | escape }}
                        </a>
                        <span class="icon-dropdown" data-toggle-menu-mb>
                            {% render 'icon-caret-right' %}
                        </span>
                        {%- if new_label_2 contains childtitle -%}
                            <span class="label new-label">
                                {{ 'general.navigation.new_label' | t }}
                            </span>
                        {%- elsif sale_label_2 contains childtitle -%}
                            <span class="label sale-label">
                                {{ 'general.navigation.sale_label' | t }}
                            </span>
                        {%- elsif hot_label_2 contains childtitle -%}
                            <span class="label hot-label">
                                {{ 'general.navigation.hot_label' | t }}
                            </span>
                        {%- endif -%}
                    </p>
                    <div class="menu-lv__dropdownmenu menu-lv__dropdownmenu-2">
                        <ul class="menu-lv__list list-menu list-unstyled motion-reduce">
                            <li class="menu-lv-item menu-lv-3 nav-title-mobile text-center">
                                <span class="icon-dropdown">
                                    {% render 'icon-long-arrow' %}
                                </span>
                                <span class="menu-lv-3__action link focus-inset">
                                    <span class="text">
                                        {{ childlink.title | escape }}
                                    </span>
                                </span>
                            </li>
                            <li class="menu-lv-item menu-lv-3 text-left nav-all-mobile">
                                <a href="{{ childlink.url }}" class="menu-lv-3__action list-menu__item list-menu__item--end link focus-inset">
                                    <span class="text">
                                        {{ 'general.navigation.go_to' | t : name : childlink.title | escape }}
                                    </span>
                                </a>
                            </li>
                            {%- for grandchildlink in childlink.links -%}
                                {% assign grandchildtitle = grandchildlink.title | escape | downcase | handle %}
                                <li class="menu-lv-item menu-lv-3 text-left{% if sale_item_lv3 contains grandchildtitle %} menu-sale{% endif %}">
                                    <a href="{{ grandchildlink.url }}" class="menu-lv-3__action list-menu__item list-menu__item--end link focus-inset"{% if grandchildlink.current %} aria-current="page"{% endif %}>
                                        <span class="text">
                                            {{ grandchildlink.title | escape }}
                                        </span>
                                        {%- if new_label_3 contains grandchildtitle -%}
                                            <span class="label new-label">
                                                {{ 'general.navigation.new_label' | t }}
                                            </span>
                                        {%- elsif sale_label_3 contains grandchildtitle -%}
                                            <span class="label sale-label">
                                                {{ 'general.navigation.sale_label' | t }}
                                            </span>
                                        {%- elsif hot_label_3 contains grandchildtitle -%}
                                            <span class="label hot-label">
                                                {{ 'general.navigation.hot_label' | t }}
                                            </span>
                                        {%- endif -%}
                                    </a>
                                </li>
                            {%- endfor -%}
                        </ul>
                    </div>
                {%- endif -%}
            </li>
        {%- endfor -%}
    </ul>
</div>