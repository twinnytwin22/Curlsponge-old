    {% render 'header-mobile-2',
        menu_tab: menu_tab,
        page_handle: page_handle,
        icon_account: icon_account,
        icon_cart: icon_cart,
        icon_search: '4'
    %}
{%- else -%}
    {% render 'header-mobile-3',
        menu_tab: menu_tab,
        page_handle: page_handle,
        icon_cart: icon_cart,
        icon_search: '4'
    %}
