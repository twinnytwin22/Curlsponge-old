{%- if settings.show_someone_purchase -%}
	{% render 'halo-someone-purchase' %}
{%- else -%}
	<script type="text/javascript">
		deleteCookie('notification-popup');
	</script>
{%- endif -%}

{%- if settings.show_newsletter_popup -%}
	{% render 'halo-newsletter-popup' %}
{%- else -%}
	<script type="text/javascript">
		deleteCookie('newsletter-popup');
	</script>
{%- endif -%}

{%- if settings.show_customer_login and settings.customer_login_type == 'popup' and shop.customer_accounts_enabled -%}
	{% render 'halo-customer-login-popup' %}
{%- endif -%}

{%- if settings.show_recently_viewed_popup -%}
	{% render 'halo-recently-viewed-popup' %}
{%- endif -%}

{%- if settings.show_quick_cart and settings.quick_cart_type == 'popup' -%}
	{% render 'halo-cart-dropdown' %}
{%- endif -%}

{%- if settings.show_quick_edit_cart -%}
    {% render 'halo-edit-cart-popup' %}
{%- endif -%}

{%- if settings.show_ask_an_expert -%}
	{% render 'halo-ask-an-expert-popup' %}
{%- endif -%}

{%- if settings.global_checkbox_type == 'popup' -%}
	{% render 'halo-global-checkbox-link-popup' %}
{%- endif -%}

{%- if settings.show_notify_form -%}
	{% render 'halo-notify-me-popup' %}
{%- endif -%}

{%- if settings.after_add_to_cart == 'popup_cart_1' -%}
	{% render 'halo-cart-popup-1' %}
{%- elsif settings.after_add_to_cart == 'popup_cart_2' -%}
	{% render 'halo-cart-popup-2' %}
{%- endif -%}

{%- if settings.show_compare -%}
	{% render 'halo-compare-popup' %}
{%- endif -%}

{%- if settings.show_quick_view -%}
	{% render 'halo-quick-view-popup' %}
{%- endif -%}

{% render 'halo-newsletter-success-popup'%}