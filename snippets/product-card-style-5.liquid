{%- liquid
    assign padding_bottom = 0
    assign position_bottom = 0
    assign line_height = settings.line_height | plus: 0
    if show_add_to_cart == true or show_add_to_cart == 'true'
        assign border = settings.btn_border_width | times: 2
        assign action_btn_height = settings.product_action_font_size | times: line_height | plus: settings.btn_padding_top | plus: settings.btn_padding_bottom | plus: border | plus: 9
        assign position_bottom = action_btn_height | divided_by: 2 | append: 'px'
    else
        assign action_btn_height = 0
        assign position_bottom = action_btn_height | append: 'px'
    endif
    assign padding_bottom = action_btn_height | divided_by: 2
    if settings.show_compare and settings.product_compare_type == 'default'
        assign compare_height = settings.type_body_font_size | times: line_height | plus: 9
        assign padding_bottom = padding_bottom | plus: compare_height | append: 'px'
    endif
-%}
<div class="product-item" data-product-id="{{ product.id }}" data-json-product='{"title": {{ product.title | json }}, "id": {{ product.id }}, "url": {{ product.url | json }}, "price_min": {{ product.price_min | json }},  "handle": "{{ product.handle }}", "media": {{ product.media | json }}, "variants": {{ product.variants | json }}}' style="padding-bottom: {{ padding_bottom }}">
    <div class="card style-5">
        <div class="card-product{% if product.featured_media == nil %} card--text-only card--soft{% endif %}">
            <div class="card-product__wrapper">
                {%- if settings.show_badge -%}
                    {%- liquid
                        unless settings.show_badge_mobile
                            assign badge_class = 'card__badge card-mobile__hidden'
                        else
                            assign badge_class = 'card__badge'
                        endunless
                    -%}
                    {% render 'product-badge',
                        product: product,
                        class: badge_class,
                        badge_detail: true,
                        serial: serial
                    %}
                {%- endif -%}

                {% render 'product-card-image',
                    product: product,
                    media_size: media_size,
                    portrait_aspect_ratio: portrait_aspect_ratio
                %}
                
                <div class="card-action__wrapper-2">
                    {% render 'product-card-action-group-2',
                        product: product,
                        show_add_to_cart: show_add_to_cart,
                        icon_compare: '1',
                        position: position,
                        wishlist_add: wishlist_add,
                        sectionId: sectionId
                    %}
                </div>

                {%- if settings.show_quick_shop and product.available -%}
                    {%- liquid
                        assign has_popup = false
                        assign variantCount = product.variants | size
                        assign option_name = product.options_with_values[0].name | downcase
                        assign product_swatch_option = settings.swatch | downcase
                        if product.options_with_values.size == 1 and product_swatch_option contains option_name and settings.show_swatch
                            assign has_popup = false
                        else
                            assign has_popup = true
                        endif
                    -%}
                    {%- if variantCount > 0 and product.variants.first.title != 'Default Title' -%}
                        {%- if has_popup -%}
                            <div class="variants-popup custom-scrollbar">
                                {% render 'product-quick-shop-popup',
                                    product: product,
                                    id: 'form',
                                    list: 'list',
                                    position: position,
                                    sectionId: sectionId,
                                    show_internal_button: true
                                %}
                            </div>
                        {%- endif -%}
                    {%- endif -%}
                {%- endif -%}
            </div>
        </div>
        <div class="card-information">
            {%- liquid
                assign product_content_text_align = settings.product_content_text_align
                assign product_title_line_text = settings.product_title_line_text
                assign enable_swatch_name = settings.enable_swatch_name
            -%}
            <div class="card-information__wrapper text-{{ product_content_text_align }}">
                {%- if settings.show_vendor -%}
                    <div class="card-vendor">
                        <span class="visually-hidden">{{ 'accessibility.vendor' | t }}</span>
                        {{ product.vendor | link_to_vendor }}
                    </div>
                {%- endif -%}

                <a class="card-title link-underline{% if product_title_line_text != 'full' %} card-title-ellipsis{% endif %}{% if variant_selected != blank %} card-title-change{% endif %}" href="{{ product.url | within: collection }}" data-product-title="{{ product.title | escape }}" data-product-url="{{ product.url | within: collection }}">
                    <span class="text">{{ product.title | strip }}{%- if variant_selected != blank and enable_swatch_name -%} <span data-change-title> - {{ variant_selected }}</span>{%- endif -%}</span>
                </a>

                {%- if show_list -%}
                    {%- if settings.show_review -%}
                        {% render 'product-card-review',
                            product: product,
                            class: 'card-list__hidden'
                        %}
                    {%- endif -%}
                    
                    {% render 'product-card-summary',
                        product: product,
                        class: 'card-list__hidden'
                    %}
                {%- endif -%}

                {%- if settings.show_review -%}
                    {% render 'product-card-review',
                        product: product,
                        class: 'card-grid__hidden'
                    %}
                {%- endif -%}

                <div class="card-price" id="card-price-{{ product.id }}">
                    {% render 'price',
                        product: product,
                        price_class: ''
                    %}
                </div>

                {%- if settings.show_swatch and isColor -%}
                    {% render 'product-swatch',
                        product: product,
                        variant_selected: variant_selected,
                        class: '',
                        index: index
                    %}
                {%- endif -%}

                {%- if settings.show_product_attribute -%}
                    {% render 'product-attribute',
                        class: 'card-grid__hidden',
                        product: product
                    %}
                {%- endif -%}

                {%- if settings.show_compare -%}
                    {% render 'product-compare',
                        product: product,
                        sectionId: sectionId,
                        icon_compare: '1',
                        class: 'card-compare with-plus card-grid__hidden'
                    %}
                {%- endif -%}
            </div>

            {%- if show_list -%}
                <div class="card-action__group card-list__hidden">
                    {%- if settings.show_action -%}
                        {%- if show_add_to_cart == true or show_add_to_cart == 'true' -%}
                            <div class="card-action">
                                {% render 'add-to-cart-form-list',
                                    product: product,
                                    sectionId: sectionId
                                %}
                            </div>
                        {%- endif -%}
                    {%- endif -%}
                    {%- if settings.show_compare -%}
                        {% assign sectionId = sectionId | append: '-list' %}
                        {% render 'product-compare',
                            product: product,
                            sectionId: sectionId,
                            icon_compare: '1',
                            class: 'card-compare with-plus'
                        %}
                    {%- endif -%}
                </div>
                {%- if settings.show_quick_shop -%}
                    <div class="card-popup card-list__hidden custom-scrollbar">
                        <a href="javascript:void(0)" title="{{ 'general.common.close' | t }}" data-close-quickshop-popup-list role="button">
                            <span class="visually-hidden">{{ 'general.common.close' | t }}</span>
                            {% render 'icon-close' %}
                        </a>
                        <div class="card-popup-content"></div>
                    </div>
                {%- endif -%}
            {%- endif -%}
        </div>
    </div>
</div>