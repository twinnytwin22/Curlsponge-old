    {%- elsif settings.product_title_font == 'font_3' -%}
        --product-title-font: var(--font-3-family);
    {%- endif -%}
    --product-title-font-size : {{ settings.product_title_font_size | append: 'px' }};
    --product-title-font-weight : {{ settings.product_title_font_weight }};
    --product-title-line-text : {{ settings.product_title_line_text }};
    --product-title-text-transform : {{ settings.product_title_text_transform }};
    --product-title-color : {{ settings.product_title_color }};
    --product-title-color-hover : {{ settings.product_title_color_hover }};
    --product-vendor-font-size : {{ settings.product_vendor_font_size | append: 'px' }};
    --product-vendor-font-weight : {{ settings.product_vendor_font_weight }};
    --product-vendor-text-transform : {{ settings.product_vendor_text_transform }};
    --product-vendor-color : {{ settings.product_vendor_color }};
    --prodict-price-font-size : {{ settings.product_price_font_size | append: 'px' }};
    --prodict-price-font-weight : {{ settings.product_price_font_weight }};
    --prodict-price-compare-font-size : {{ settings.product_price_compare_font_size | append: 'px' }};
    --prodict-price-compare-font-weight : {{ settings.product_price_compare_font_weight }};
