{% if settings.type_font_1 == 'shopify_fonts' %}
    {{ settings.type_font_1_shopify_name | font_face: font_display: 'swap' }}
{% else %}
    {%- assign type_font_1 = settings.type_font_1_google_name -%}

    {%- capture type_font_1_name -%}
        {{ type_font_1 | strip | replace: ' ', '+'}}:300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i
    {%- endcapture -%}

    @import url('https://fonts.googleapis.com/css?family={{ type_font_1_name }}&display=swap');

    {% assign type_font_1_name = type_font_1 %}
{% endif %}

{% if settings.type_font_2 == 'shopify_fonts' %}
    {{ settings.type_font_2_shopify_name | font_face: font_display: 'swap' }}
{% else %}
    {%- assign type_font_2 = settings.type_font_2_google_name -%}

    {%- capture type_font_2_name -%}
        {{ type_font_2 | strip | replace: ' ', '+'}}:300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i
    {%- endcapture -%}

    {%- if type_font_2 != type_font_1 -%}
        @import url('https://fonts.googleapis.com/css?family={{ type_font_2_name }}&display=swap');
    {%- endif -%}

    {% assign type_font_2_name = type_font_2 %}
{% endif %}

{% if settings.type_font_3 == 'shopify_fonts' %}
    {{ settings.type_font_3_shopify_name | font_face: font_display: 'swap' }}
{% else %}
    {%- assign type_font_3 = settings.type_font_3_google_name -%}

    {%- capture type_font_3_name -%}
        {{ type_font_3 | strip | replace: ' ', '+'}}:300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i
    {%- endcapture -%}

    {%- if type_font_3 != type_font_1 and type_font_3 != type_font_2 -%}
        @import url('https://fonts.googleapis.com/css?family={{ type_font_3_name }}&display=swap');
    {%- endif -%}

    {% assign type_font_3_name = type_font_3 %}
{% endif %}

:root {
    {% if settings.type_font_1 == 'shopify_fonts' %}
        --font-1-family: {{ settings.type_font_1_shopify_name.family }}, {{ settings.type_font_1_shopify_name.fallback_families }};
        --font-1-style: {{ settings.type_font_1_shopify_name.style }};
        --font-1-weight: {{ settings.type_font_1_shopify_name.weight }};
    {% else %}
        --font-1-family: {{ type_font_1_name }}, {{ settings.type_font_1_shopify_name.fallback_families }};
        --font-1-style: normal;
        --font-1-weight: normal;
    {% endif %}
    {% if settings.type_font_2 == 'shopify_fonts' %}
        --font-2-family: {{ settings.type_font_2_shopify_name.family }}, {{ settings.type_font_2_shopify_name.fallback_families }};
        --font-2-style: {{ settings.type_font_2_shopify_name.style }};
        --font-2-weight: {{ settings.type_font_2_shopify_name.weight }};
