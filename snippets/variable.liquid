    --product-quick-view-bg-hover : {{ settings.product_quick_view_bg_hover }};
    {%- if settings.product_action_font == 'font_1' -%}
        --product-action-font: var(--font-1-family);
    {%- elsif settings.product_action_font == 'font_2' -%}
        --product-action-font: var(--font-2-family);
    {%- elsif settings.product_action_font == 'font_3' -%}
        --product-action-font: var(--font-3-family);
    {%- endif -%}
