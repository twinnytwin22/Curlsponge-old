        --font-heading-weight: var(--font-1-weight);
    {% elsif settings.type_header == 'font_2' %}
        --font-heading-family: var(--font-2-family);
        --font-heading-style: var(--font-2-style);
        --font-heading-weight: var(--font-2-weight);
    {% elsif settings.type_header == 'font_3' %}
        --font-heading-family: var(--font-3-family);
        --font-heading-style: var(--font-3-style);
        --font-heading-weight: var(--font-3-weight);
    {% endif %}

    {% if settings.type_page_title == 'font_1' %}
        --font-page-title-family: var(--font-1-family);
        --font-page-title-style: var(--font-1-style);
        --font-page-title-weight: var(--font-1-weight);
    {% elsif settings.type_page_title == 'font_2' %}
        --font-page-title-family: var(--font-2-family);
        --font-page-title-style: var(--font-2-style);
        --font-page-title-weight: var(--font-2-weight);
    {% elsif settings.type_page_title == 'font_3' %}
        --font-page-title-family: var(--font-3-family);
        --font-page-title-style: var(--font-3-style);
