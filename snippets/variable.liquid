        --font-2-family: {{ type_font_2_name }}, {{ settings.type_font_2_shopify_name.fallback_families }};
        --font-2-style: normal;
        --font-2-weight: normal;
    {% endif %}
    {% if settings.type_font_3 == 'shopify_fonts' %}
        --font-3-family: {{ settings.type_font_3_shopify_name.family }}, {{ settings.type_font_3_shopify_name.fallback_families }};
        --font-3-style: {{ settings.type_font_3_shopify_name.style }};
        --font-3-weight: {{ settings.type_font_3_shopify_name.weight }};
    {% else %}
        --font-3-family: {{ type_font_3_name }}, {{ settings.type_font_3_shopify_name.fallback_families }};
        --font-3-style: normal;
        --font-3-weight: normal;
    {% endif %}

    {% if settings.type_body == 'font_1' %}
        --font-body-family: var(--font-1-family);
        --font-body-style: var(--font-1-style);
        --font-body-weight: var(--font-1-weight);
    {% elsif settings.type_body == 'font_2' %}
