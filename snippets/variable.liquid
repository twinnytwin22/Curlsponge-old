    --custom-badge-bg: {{ settings.custom_badge_bg }};
    --bundle-badge-color: {{ settings.bundle_badge_color }};
    --bundle-badge-bg: {{ settings.bundle_badge_bg }};
    --badge-text-transform : {{ settings.badge_text_transform }};
