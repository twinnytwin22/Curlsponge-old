<div class="productView-soldProduct" data-sold-out-product data-item="{{ sold_in_number }}" data-hours="{{ sold_in_hours }}">
	{%- if sold_in_icon != blank -%}
		{{ sold_in_icon }}
	{%- else -%}
		{% render 'icon-fire' %}
	{%- endif -%}
    <span class="text">
        <span data-sold-out-number>2</span>
        {{ 'products.product.sold_in_last.text_1' | t }}
        <span data-sold-out-hours>8</span>
        {{ 'products.product.sold_in_last.text_2' | t }}
    </span>
</div>